---
import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Layout from '~/layouts/PageLayout.astro';
import ServicesTabs from '~/components/ui/ServicesTabs.tsx';
import Stats from '~/components/widgets/Stats.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Image from '~/components/common/Image.astro';

const metadata = {
  title: 'Services',
};
---

<Layout metadata={metadata}>
  <!-- Enhanced Hero Widget ******************* -->

  <Hero
    tagline="Our Services"
    actions={[
      { variant: 'primary', text: 'Get Quote', href: '/contact', icon: 'tabler:phone' },
      { variant: 'secondary', text: 'Learn More', href: '/about' },
    ]}
  >
    <Fragment slot="bg">
      <Image
        src="~/assets/images/All Images/Oil Field Operations.webp"
        alt="Wood Wireline Services"
        class="absolute inset-0 w-full h-full object-cover max-w-full"
        widths={[1920, 2560]}
        sizes="100vw"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-black/70 via-black/60 to-black/70"></div>
    </Fragment>
    <Fragment slot="title">
      <span class="text-white">Comprehensive Wireline Services</span>
    </Fragment>
    <Fragment slot="subtitle">
      <p class="text-white">From logging to plug and abandonment, we provide the full spectrum of wireline services your operations need. Our crews are among the most efficient in wireline, ready to deliver results.</p>
    </Fragment>
  </Hero>

  <!-- Photo Showcase ******************* -->

  <section class="py-12 md:py-20 bg-gray-50 dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <div class="col-span-2">
          <Image
            src="~/assets/images/All Images/Oil Rig Worker Monitoring Equipment.webp"
            alt="Monitoring Equipment"
            class="w-full h-full object-cover rounded-lg shadow-xl"
            widths={[600, 800]}
            sizes="(max-width: 768px) 100vw, 50vw"
          />
        </div>
        <div>
          <Image
            src="~/assets/images/All Images/Oil Rig Equipment.webp"
            alt="Rig Equipment"
            class="w-full h-full object-cover rounded-lg shadow-lg"
            widths={[300, 400]}
            sizes="(max-width: 768px) 50vw, 25vw"
          />
        </div>
        <div>
          <Image
            src="~/assets/images/All Images/Oilfield Workers Operating Machinery.webp"
            alt="Operating Machinery"
            class="w-full h-full object-cover rounded-lg shadow-lg"
            widths={[300, 400]}
            sizes="(max-width: 768px) 50vw, 25vw"
          />
        </div>
        <div>
          <Image
            src="~/assets/images/All Images/Oil Rig Worker Inspection.webp"
            alt="Worker Inspection"
            class="w-full h-full object-cover rounded-lg shadow-lg"
            widths={[300, 400]}
            sizes="(max-width: 768px) 50vw, 25vw"
          />
        </div>
        <div>
          <Image
            src="~/assets/images/All Images/Oil Rig Worker Onsite.webp"
            alt="Worker Onsite"
            class="w-full h-full object-cover rounded-lg shadow-lg"
            widths={[300, 400]}
            sizes="(max-width: 768px) 50vw, 25vw"
          />
        </div>
        <div class="col-span-2">
          <Image
            src="~/assets/images/All Images/Wood Wireline Truck-BdikWvmwck.webp"
            alt="Wood Wireline Truck"
            class="w-full h-full object-cover rounded-lg shadow-xl"
            widths={[600, 800]}
            sizes="(max-width: 768px) 100vw, 50vw"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Stats ******************* -->

  <Stats
    stats={[
      { title: 'Services Available', amount: '16+' },
      { title: 'Years Experience', amount: '48+' },
      { title: 'Service Basins', amount: '5' },
      { title: '24/7 Availability', amount: 'Yes' },
    ]}
  />

  <!-- Enhanced Services Tabs ******************* -->

  <section class="w-full overflow-x-hidden">
    <ServicesTabs client:load />
  </section>

  <!-- Service Categories Overview ******************* -->

  <Features2
    title="Service Categories"
    subtitle="We offer comprehensive wireline services across multiple categories to meet all your operational needs."
    columns={3}
    items={[
      {
        title: 'Formation Evaluation',
        description: 'E-Line logging, flow diagnostics, and comprehensive formation analysis services.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'Well Intervention',
        description: 'Slickline, swabbing, fishing, and pipe recovery services for well maintenance.',
        icon: 'tabler:settings',
      },
      {
        title: 'Completion Services',
        description: 'Perforating, plug and packer setting, and TCP services for optimal completion.',
        icon: 'tabler:target',
      },
      {
        title: 'Inspection & Diagnostics',
        description: 'Downhole cameras, hydrotesting, and comprehensive diagnostic services.',
        icon: 'tabler:camera',
      },
      {
        title: 'Plug & Abandonment',
        description: 'Safe and compliant P&A services following all regulatory requirements.',
        icon: 'tabler:lock',
      },
      {
        title: 'Specialized Equipment',
        description: '7-conductor wireline, Kinley cutter, and other specialized tool services.',
        icon: 'tabler:tool',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-gradient-to-b from-gray-50 via-white to-gray-50 dark:from-transparent dark:via-transparent dark:to-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Enhanced CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Contact Us',
        href: '/contact',
        icon: 'tabler:phone',
      },
      {
        variant: 'secondary',
        text: 'View About Us',
        href: '/about',
      },
    ]}
    title="Ready to Get Started?"
    subtitle="Contact us today to discuss your wireline service needs. We're ready to work when you are. No excuses, no downtime. Just results."
  />
</Layout>
