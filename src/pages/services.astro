<script is:inline>
  const initServiceNavigation = () => {
    const links = Array.from(document.querySelectorAll('[data-service-link]'));
    const panels = Array.from(document.querySelectorAll('[data-service-panel]'));

    if (!links.length || !panels.length) {
      console.warn('Service navigation: links or panels not found');
      return;
    }

    const mediaDesktop = window.matchMedia('(min-width: 1024px)');
    const mediaMobile = window.matchMedia('(max-width: 1023.98px)');

    const setActiveLink = (targetId) => {
      links.forEach((link) => {
        const isActive = link.dataset.serviceLink === targetId;
        link.dataset.active = isActive ? 'true' : 'false';
        if (isActive) {
          link.setAttribute('aria-current', 'true');
        } else {
          link.removeAttribute('aria-current');
        }
      });
    };

    const openPanel = (targetId, { force = false, scroll = false } = {}) => {
      console.log('openPanel called:', targetId, 'scroll:', scroll);
      let targetPanel = null;
      panels.forEach((panel) => {
        const isTarget = panel.id === targetId;
        if (isTarget) {
          targetPanel = panel;
          console.log('Found target panel:', targetId, 'currently open:', panel.open);
          // Force the panel open
          panel.open = true;
          // Trigger a reflow to ensure the open state is applied
          void panel.offsetHeight;
          console.log('Panel opened:', targetId);
        } else if (force || mediaDesktop.matches) {
          panel.open = false;
        }
      });

      if (targetPanel) {
        setActiveLink(targetId);
        if (scroll) {
          console.log('Preparing to scroll to:', targetId);
          // Wait longer for the details element to fully expand before scrolling
          // The details element needs time to render its content
          setTimeout(() => {
            console.log('Scrolling to panel:', targetId);
            // Scroll with offset to account for sticky header
            const yOffset = -100; // Offset for header
            const element = targetPanel;
            const y = element.getBoundingClientRect().top + window.pageYOffset + yOffset;

            window.scrollTo({ top: y, behavior: 'smooth' });
            console.log('Scroll initiated to position:', y);
          }, 200);
        }
      } else {
        console.warn('Target panel not found:', targetId);
      }
    };

    links.forEach((link) => {
      link.addEventListener('click', (event) => {
        const targetId = link.dataset.serviceLink;
        if (!targetId) return;

        if (mediaDesktop.matches) {
          event.preventDefault();
          openPanel(targetId, { force: true });
        }
      });
    });

    panels.forEach((panel) => {
      panel.addEventListener('toggle', () => {
        if (panel.open && mediaMobile.matches) {
          panels.forEach((other) => {
            if (other !== panel) {
              other.open = false;
            }
          });
        }
        if (panel.open) {
          setActiveLink(panel.id);
        }
      });
    });

    const handleHashChange = () => {
      const hash = window.location.hash?.replace('#', '');
      console.log('Hash changed:', hash);
      if (hash) {
        openPanel(hash, { force: true, scroll: true });
      }
    };

    // Listen for hash changes
    window.addEventListener('hashchange', handleHashChange);

    // Handle initial hash on page load
    const initialHash = window.location.hash?.replace('#', '');
    console.log('Initial hash on load:', initialHash);
    if (initialHash) {
      // Add a delay to ensure DOM is ready and images/content are loaded
      console.log('Will open panel in 800ms:', initialHash);
      setTimeout(() => {
        console.log('Timeout fired, opening panel:', initialHash);
        openPanel(initialHash, { force: true, scroll: true });
      }, 800);
    } else if (panels[0]) {
      console.log('No hash, opening first panel');
      openPanel(panels[0].id, { force: true });
    }
  };

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initServiceNavigation);
  } else {
    initServiceNavigation();
  }
</script>

<style>
  @media (min-width: 1024px) {
    [data-service-panel]:not([open]) {
      display: none;
    }
  }
</style>
