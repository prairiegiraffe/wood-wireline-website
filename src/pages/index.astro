---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Note from '~/components/widgets/Note.astro';
import TablerIcon from '~/components/ui/TablerIcon.astro';

const metadata = {
  title: 'Wood Wireline — Efficient. Reliable. Ready.',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Section ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Get Quote',
        href: '/contact',
        icon: 'tabler:phone',
      },
      {
        variant: 'secondary',
        text: 'Our Services',
        href: '/services',
      },
    ]}
  >
    <Fragment slot="title">
      <span class="text-gray-900 dark:text-white">WOOD WIRELINE</span><br />
      <span class="text-gray-900 dark:text-white text-4xl md:text-5xl font-bold mt-4 block"
        >Efficient. Reliable. Ready.</span
      >
    </Fragment>

    <Fragment slot="bg">
      <video
        autoplay
        loop
        muted
        playsinline
        preload="auto"
        class="absolute inset-0 w-full h-full object-cover opacity-50 dark:opacity-30"
        aria-hidden="true"
        onloadedmetadata="this.play()"
      >
        <source src="/WW - Website Background Loop - 10.mp4" type="video/mp4" />
      </video>
      <div class="absolute inset-0 bg-gradient-to-b from-black/42 via-black/30 to-black/42"></div>
    </Fragment>
  </Hero>

  <!-- Company Introduction Section ******************* -->

  <section class="py-12 md:py-16 bg-white dark:bg-gray-900">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 text-center">
      <p class="text-xl md:text-2xl leading-relaxed font-medium text-muted dark:text-slate-300">
        Since 1977, Wood Wireline has set the standard for wireline services across five major basins. Professional
        crews, proven equipment, results that matter.
      </p>
    </div>
  </section>

  <!-- Enhanced Stats Widget (Metrics Bar) ****************** -->

  <Stats
    title="Wood Wireline by the Numbers"
    stats={[
      { title: 'Years in Business', amount: '48+' },
      { title: 'Service Basins', amount: '5' },
      { title: 'Service Locations', amount: '4' },
      { title: 'Services Offered', amount: '16+' },
    ]}
  />

  <!-- Enhanced Note Widget ******************* -->

  <Note title="Our Standard:" description="On time. On spec. Every time. We don't make excuses—we deliver results." />

  <!-- PROMINENT SERVICES SECTION - Moved Higher Up ******************* -->

  <section id="services" class="py-16 md:py-24 bg-white dark:bg-gray-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-12">
        <p class="text-base font-semibold text-secondary dark:text-blue-200 uppercase tracking-wide mb-2">
          What We Offer
        </p>
        <h2 class="text-4xl md:text-6xl font-bold tracking-tight dark:text-white mb-6">Wireline Services</h2>
        <p class="text-xl md:text-2xl text-muted dark:text-slate-300 max-w-4xl mx-auto leading-relaxed mb-4">
          From logging to P&A, we provide the full spectrum of wireline capabilities your operations demand.
        </p>
        <p class="text-lg text-muted dark:text-slate-400 max-w-3xl mx-auto">
          <a href="/services" class="text-primary hover:underline font-semibold inline-flex items-center">
            View All Services Details <span class="ml-2">→</span>
          </a>
        </p>
      </div>

      <!-- Services Grid - Prominent Display ******************* -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
        <div
          class="bg-gray-50 dark:bg-gray-900 rounded-xl p-6 border-2 border-gray-200 dark:border-gray-700 hover:border-primary transition-all hover:shadow-xl"
        >
          <div class="mb-4 text-primary">
            <TablerIcon name="tabler:chart-line" className="w-12 h-12" />
          </div>
          <h3 class="text-xl font-bold dark:text-white mb-2">E-Line: Logging</h3>
          <p class="text-muted dark:text-slate-300 mb-4">
            Professional logging services using advanced wireline technology for accurate formation evaluation.
          </p>
          <ul class="space-y-2 text-sm text-muted dark:text-slate-400">
            <li>• Advanced wireline logging technology</li>
            <li>• Real-time data acquisition</li>
            <li>• 7-conductor wireline capabilities</li>
          </ul>
        </div>

        <div
          class="bg-gray-50 dark:bg-gray-900 rounded-xl p-6 border-2 border-gray-200 dark:border-gray-700 hover:border-primary transition-all hover:shadow-xl"
        >
          <div class="mb-4 text-primary">
            <TablerIcon name="tabler:link" className="w-12 h-12" />
          </div>
          <h3 class="text-xl font-bold dark:text-white mb-2">Slickline</h3>
          <p class="text-muted dark:text-slate-300 mb-4">
            Efficient slickline services for well intervention, maintenance, and data collection operations.
          </p>
          <ul class="space-y-2 text-sm text-muted dark:text-slate-400">
            <li>• Well intervention services</li>
            <li>• Maintenance operations</li>
            <li>• 24/7 availability</li>
          </ul>
        </div>

        <div
          class="bg-gray-50 dark:bg-gray-900 rounded-xl p-6 border-2 border-gray-200 dark:border-gray-700 hover:border-primary transition-all hover:shadow-xl"
        >
          <div class="mb-4 text-primary">
            <TablerIcon name="tabler:droplet" className="w-12 h-12" />
          </div>
          <h3 class="text-xl font-bold dark:text-white mb-2">Swabbing</h3>
          <p class="text-muted dark:text-slate-300 mb-4">
            Expert swabbing services to remove fluids and restore well production efficiently.
          </p>
          <ul class="space-y-2 text-sm text-muted dark:text-slate-400">
            <li>• Fluid removal services</li>
            <li>• Production restoration</li>
            <li>• Quick turnaround</li>
          </ul>
        </div>

        <div
          class="bg-gray-50 dark:bg-gray-900 rounded-xl p-6 border-2 border-gray-200 dark:border-gray-700 hover:border-primary transition-all hover:shadow-xl"
        >
          <div class="mb-4 text-primary">
            <TablerIcon name="tabler:target" className="w-12 h-12" />
          </div>
          <h3 class="text-xl font-bold dark:text-white mb-2">Perforating</h3>
          <p class="text-muted dark:text-slate-300 mb-4">
            Precision perforating services to optimize well completion and production performance.
          </p>
          <ul class="space-y-2 text-sm text-muted dark:text-slate-400">
            <li>• Precision perforating systems</li>
            <li>• TCP (Tubing Conveyed Perforating)</li>
            <li>• Safety-focused operations</li>
          </ul>
        </div>

        <div
          class="bg-gray-50 dark:bg-gray-900 rounded-xl p-6 border-2 border-gray-200 dark:border-gray-700 hover:border-primary transition-all hover:shadow-xl"
        >
          <div class="mb-4 text-primary">
            <TablerIcon name="tabler:lock" className="w-12 h-12" />
          </div>
          <h3 class="text-xl font-bold dark:text-white mb-2">Setting Plugs & Packers</h3>
          <p class="text-muted dark:text-slate-300 mb-4">
            Professional setting of plugs and packers for well isolation and completion operations.
          </p>
          <ul class="space-y-2 text-sm text-muted dark:text-slate-400">
            <li>• Expert plug and packer setting</li>
            <li>• Well isolation services</li>
            <li>• Reliable sealing solutions</li>
          </ul>
        </div>

        <div
          class="bg-gray-50 dark:bg-gray-900 rounded-xl p-6 border-2 border-gray-200 dark:border-gray-700 hover:border-primary transition-all hover:shadow-xl"
        >
          <div class="mb-4 text-primary">
            <TablerIcon name="tabler:shield-lock" className="w-12 h-12" />
          </div>
          <h3 class="text-xl font-bold dark:text-white mb-2">Plug & Abandonment</h3>
          <p class="text-muted dark:text-slate-300 mb-4">
            Safe and compliant plug and abandonment services following industry best practices.
          </p>
          <ul class="space-y-2 text-sm text-muted dark:text-slate-400">
            <li>• Regulatory compliance</li>
            <li>• Safe abandonment procedures</li>
            <li>• Full documentation</li>
          </ul>
        </div>

        <div
          class="bg-gray-50 dark:bg-gray-900 rounded-xl p-6 border-2 border-gray-200 dark:border-gray-700 hover:border-primary transition-all hover:shadow-xl"
        >
          <div class="mb-4 text-primary">
            <TablerIcon name="tabler:gauge" className="w-12 h-12" />
          </div>
          <h3 class="text-xl font-bold dark:text-white mb-2">Hydrotesting</h3>
          <p class="text-muted dark:text-slate-300 mb-4">
            Reliable hydrotesting services to ensure equipment integrity and safety compliance.
          </p>
          <ul class="space-y-2 text-sm text-muted dark:text-slate-400">
            <li>• Equipment integrity testing</li>
            <li>• Safety compliance</li>
            <li>• Certified testing</li>
          </ul>
        </div>

        <div
          class="bg-gray-50 dark:bg-gray-900 rounded-xl p-6 border-2 border-gray-200 dark:border-gray-700 hover:border-primary transition-all hover:shadow-xl"
        >
          <div class="mb-4 text-primary">
            <TablerIcon name="tabler:plug-connected" className="w-12 h-12" />
          </div>
          <h3 class="text-xl font-bold dark:text-white mb-2">Slick E-Line</h3>
          <p class="text-muted dark:text-slate-300 mb-4">
            Our newest addition: Combined slickline and e-line capabilities for versatile operations.
          </p>
          <ul class="space-y-2 text-sm text-muted dark:text-slate-400">
            <li>• Combined capabilities</li>
            <li>• Latest technology</li>
            <li>• Innovative solutions</li>
          </ul>
        </div>

        <div
          class="bg-gray-50 dark:bg-gray-900 rounded-xl p-6 border-2 border-gray-200 dark:border-gray-700 hover:border-primary transition-all hover:shadow-xl"
        >
          <div class="mb-4 text-primary">
            <TablerIcon name="tabler:camera" className="w-12 h-12" />
          </div>
          <h3 class="text-xl font-bold dark:text-white mb-2">Cameras</h3>
          <p class="text-muted dark:text-slate-300 mb-4">
            Downhole camera services for visual inspection and diagnostics.
          </p>
          <ul class="space-y-2 text-sm text-muted dark:text-slate-400">
            <li>• High-resolution cameras</li>
            <li>• Visual inspection</li>
            <li>• Real-time video feed</li>
          </ul>
        </div>
      </div>

      <!-- Additional Services List ******************* -->
      <div class="bg-primary/5 dark:bg-primary/10 rounded-xl p-8 border border-primary/20">
        <h3 class="text-2xl font-bold dark:text-white mb-6 text-center">Additional Services</h3>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-center">
          <div class="flex items-center justify-center gap-2 text-muted dark:text-slate-300 font-medium">
            <TablerIcon name="tabler:tool" className="w-5 h-5 text-primary" />
            <span>Pipe Recovery</span>
          </div>
          <div class="flex items-center justify-center gap-2 text-muted dark:text-slate-300 font-medium">
            <TablerIcon name="tabler:bolt" className="w-5 h-5 text-primary" />
            <span>7-Conductor Wireline</span>
          </div>
          <div class="flex items-center justify-center gap-2 text-muted dark:text-slate-300 font-medium">
            <TablerIcon name="tabler:arrow-up" className="w-5 h-5 text-primary" />
            <span>Third Party Hoisting</span>
          </div>
          <div class="flex items-center justify-center gap-2 text-muted dark:text-slate-300 font-medium">
            <TablerIcon name="tabler:fish" className="w-5 h-5 text-primary" />
            <span>Fishing</span>
          </div>
          <div class="flex items-center justify-center gap-2 text-muted dark:text-slate-300 font-medium">
            <TablerIcon name="tabler:wave" className="w-5 h-5 text-primary" />
            <span>Flow Diagnostics</span>
          </div>
          <div class="flex items-center justify-center gap-2 text-muted dark:text-slate-300 font-medium">
            <TablerIcon name="tabler:bolt" className="w-5 h-5 text-primary" />
            <span>TCP</span>
          </div>
          <div class="flex items-center justify-center gap-2 text-muted dark:text-slate-300 font-medium">
            <TablerIcon name="tabler:scissors" className="w-5 h-5 text-primary" />
            <span>Kinley Cutter</span>
          </div>
          <div class="text-muted dark:text-slate-300 font-medium">+ More</div>
        </div>
        <div class="text-center mt-8">
          <a href="/services" class="btn-primary inline-flex items-center">
            View Complete Services List <span class="ml-2">→</span>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Enhanced Features Widget (Core Values Overview) *************** -->

  <Features
    id="values"
    tagline="Why Wood Wireline"
    title="What Sets Us Apart"
    subtitle="48 years in the field. Proven expertise. Professional execution."
    items={[
      {
        title: 'Experienced Crews',
        description:
          "Our operators bring decades of field expertise to every job. We've handled the tough wells, the complex operations, and the time-critical work. Experience reduces risk and delivers results.",
        icon: 'tabler:briefcase',
      },
      {
        title: 'Operational Excellence',
        description:
          'Clean equipment. Organized operations. Zero tolerance for shortcuts. Our standards ensure consistent performance, job after job.',
        icon: 'tabler:award',
      },
      {
        title: 'Safety First',
        description:
          'Comprehensive safety protocols on every job site. Our safety record reflects our commitment to protecting personnel and assets.',
        icon: 'tabler:shield-check',
      },
      {
        title: '24/7 Availability',
        description:
          "Operations don't run on a schedule, and neither do we. When you need wireline services, we're ready to mobilize.",
        icon: 'tabler:headset',
      },
      {
        title: 'Reliable Team',
        description:
          'Low turnover means experienced hands on your jobs. Our people stay because we invest in them, and that stability benefits your operations.',
        icon: 'tabler:users',
      },
      {
        title: 'Fast Mobilization',
        description:
          'Efficient rig-up, minimal downtime, and rapid turnaround. We understand that time on location costs money.',
        icon: 'tabler:clock',
      },
    ]}
  />

  <!-- Enhanced Content Widget (About Section) with Images **************** -->

  <Content
    isReversed
    tagline="About Us"
    title="Field-Proven Wireline Expertise"
    items={[
      {
        title: 'Since 1977',
        description:
          '48 years serving oil and gas operators across the Rocky Mountain region. Built on relationships, sustained by results.',
      },
      {
        title: 'Five Major Basins',
        description:
          'Powder River, Williston, Bakken, DJ, and Big Horn. Strategic locations ensure rapid response across our service territory.',
      },
      {
        title: 'Full-Spectrum Capabilities',
        description:
          'E-line, Slickline, Swabbing, Perforating, P&A, Hydrotesting, and Slick E-line. If it runs on wireline, we do it.',
      },
    ]}
    image={{
      src: '~/assets/images/All Images/Wood Wireline Truck-BdikWvmwck.webp',
      alt: 'Wood Wireline Operations',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-3xl md:text-4xl font-bold tracking-tight dark:text-white mb-4">Built on Performance</h3>
      <p class="text-lg md:text-xl text-muted dark:text-slate-300 mb-6 leading-relaxed">
        Wood Wireline delivers safe, efficient wireline services that keep operations running. Our reputation is built
        on executing complex jobs correctly the first time.
      </p>
      <p class="text-base md:text-lg text-muted dark:text-slate-400 leading-relaxed">
        Professional crews. Maintained equipment. Proven processes. We understand what it takes to operate successfully
        in demanding field conditions.
      </p>
    </Fragment>
  </Content>

  <!-- Enhanced Content Widget (Service Areas) with Images **************** -->

  <Content
    tagline="Locations"
    title="Strategic Basin Coverage"
    items={[
      {
        title: 'Gillette, WY (HQ)',
        description:
          'Primary operations base serving the Powder River Basin. Full wireline capabilities, 24/7 dispatch.',
      },
      {
        title: 'Casper, WY',
        description: 'DJ Basin operations. Complete service suite with rapid mobilization.',
      },
      {
        title: 'Dickinson, ND',
        description: 'Williston Basin hub. Experienced local crews, full equipment complement.',
      },
      {
        title: 'Williston, ND',
        description: 'Bakken operations center. Proven track record in challenging well conditions.',
      },
    ]}
    image={{
      src: '~/assets/images/All Images/Oilfield Operations With Crane And Truck.webp',
      alt: 'Service Areas',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-3xl md:text-4xl font-bold tracking-tight dark:text-white mb-4">Regional Expertise</h3>
      <p class="text-lg md:text-xl text-muted dark:text-slate-300 mb-4 leading-relaxed">
        Four strategically positioned locations provide comprehensive coverage across Powder River, Williston, Bakken,
        DJ, and Big Horn basins.
      </p>
      <p class="text-base md:text-lg text-muted dark:text-slate-400 leading-relaxed">
        Local knowledge. Regional reach. Rapid response when it matters most.
      </p>
    </Fragment>
  </Content>

  <!-- Enhanced CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Request Quote',
        href: '/contact',
        icon: 'tabler:phone',
      },
      {
        text: 'View Locations',
        href: '/contact#map',
        variant: 'secondary',
      },
    ]}
  >
    <Fragment slot="title">
      Need Wireline Services? <br class="block sm:hidden" /><span class="sm:whitespace-nowrap">Let's Talk.</span>
    </Fragment>

    <Fragment slot="subtitle">
      Contact Wood Wireline for professional wireline services across the Rocky Mountain region.
    </Fragment>
  </CallToAction>
</Layout>
