---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Note from '~/components/widgets/Note.astro';
import Image from '~/components/common/Image.astro';
import TablerIcon from '~/components/ui/TablerIcon.astro';

const metadata = {
  title: 'Wood Wireline — Efficient. Reliable. Ready.',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Section ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Get Quote',
        href: '/contact',
        icon: 'tabler:phone',
      },
      {
        variant: 'secondary',
        text: 'Our Services',
        href: '/services',
      },
    ]}
  >
    <Fragment slot="title">
      <span class="text-accent dark:text-white">WOOD WIRELINE</span><br />
      <span class="text-4xl md:text-5xl font-bold mt-4 block">Efficient. Reliable. Ready.</span>
    </Fragment>

    <Fragment slot="subtitle">
      Established in 1977, we have built our reputation on an unwavering commitment to being the leading service company in every basin we operate. Our crews are among the most efficient in wireline, ready to deliver results from the moment we cross the cattle guard.
    </Fragment>

    <Fragment slot="bg">
      <video
        autoplay
        loop
        muted
        playsinline
        class="absolute inset-0 w-full h-full object-cover opacity-50 dark:opacity-30"
        aria-hidden="true"
      >
        <source src="/background-video.mp4" type="video/mp4" />
      </video>
      <div class="absolute inset-0 bg-gradient-to-b from-black/70 via-black/50 to-black/70"></div>
    </Fragment>
  </Hero>

  <!-- Enhanced Stats Widget (Metrics Bar) ****************** -->

  <Stats
    title="Wood Wireline by the Numbers"
    stats={[
      { title: 'Years in Business', amount: '48+' },
      { title: 'Service Basins', amount: '5' },
      { title: 'Service Locations', amount: '4' },
      { title: 'Services Offered', amount: '16+' },
    ]}
  />

  <!-- Enhanced Note Widget ******************* -->

  <Note 
    title="Our Promise:" 
    description="No excuses, no downtime. We show up ready, perform with precision, and take pride in doing the job right the first time."
  />

  <!-- PROMINENT SERVICES SECTION - Moved Higher Up ******************* -->

  <section id="services" class="py-16 md:py-24 bg-white dark:bg-gray-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-12">
        <p class="text-base font-semibold text-secondary dark:text-blue-200 uppercase tracking-wide mb-2">
          What We Offer
        </p>
        <h2 class="text-4xl md:text-6xl font-bold tracking-tight dark:text-white mb-6">
          Our Wireline Services
        </h2>
        <p class="text-xl md:text-2xl text-muted dark:text-slate-300 max-w-4xl mx-auto leading-relaxed mb-4">
          Wood Wireline provides comprehensive wireline services across the Powder River Basin and beyond. From logging to plug and abandonment, we have the expertise and equipment to handle your operations.
        </p>
        <p class="text-lg text-muted dark:text-slate-400 max-w-3xl mx-auto">
          <a href="/services" class="text-primary hover:underline font-semibold inline-flex items-center">
            View All Services Details <span class="ml-2">→</span>
          </a>
        </p>
      </div>

      <!-- Services Grid - Prominent Display ******************* -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
        <div class="bg-gray-50 dark:bg-gray-900 rounded-xl p-6 border-2 border-gray-200 dark:border-gray-700 hover:border-primary transition-all hover:shadow-xl">
          <div class="mb-4 text-primary">
            <TablerIcon name="tabler:chart-line" className="w-12 h-12" />
          </div>
          <h3 class="text-xl font-bold dark:text-white mb-2">E-Line: Logging</h3>
          <p class="text-muted dark:text-slate-300 mb-4">Professional logging services using advanced wireline technology for accurate formation evaluation.</p>
          <ul class="space-y-2 text-sm text-muted dark:text-slate-400">
            <li>• Advanced wireline logging technology</li>
            <li>• Real-time data acquisition</li>
            <li>• 7-conductor wireline capabilities</li>
          </ul>
        </div>

        <div class="bg-gray-50 dark:bg-gray-900 rounded-xl p-6 border-2 border-gray-200 dark:border-gray-700 hover:border-primary transition-all hover:shadow-xl">
          <div class="mb-4 text-primary">
            <TablerIcon name="tabler:link" className="w-12 h-12" />
          </div>
          <h3 class="text-xl font-bold dark:text-white mb-2">Slickline</h3>
          <p class="text-muted dark:text-slate-300 mb-4">Efficient slickline services for well intervention, maintenance, and data collection operations.</p>
          <ul class="space-y-2 text-sm text-muted dark:text-slate-400">
            <li>• Well intervention services</li>
            <li>• Maintenance operations</li>
            <li>• 24/7 availability</li>
          </ul>
        </div>

        <div class="bg-gray-50 dark:bg-gray-900 rounded-xl p-6 border-2 border-gray-200 dark:border-gray-700 hover:border-primary transition-all hover:shadow-xl">
          <div class="mb-4 text-primary">
            <TablerIcon name="tabler:droplet" className="w-12 h-12" />
          </div>
          <h3 class="text-xl font-bold dark:text-white mb-2">Swabbing</h3>
          <p class="text-muted dark:text-slate-300 mb-4">Expert swabbing services to remove fluids and restore well production efficiently.</p>
          <ul class="space-y-2 text-sm text-muted dark:text-slate-400">
            <li>• Fluid removal services</li>
            <li>• Production restoration</li>
            <li>• Quick turnaround</li>
          </ul>
        </div>

        <div class="bg-gray-50 dark:bg-gray-900 rounded-xl p-6 border-2 border-gray-200 dark:border-gray-700 hover:border-primary transition-all hover:shadow-xl">
          <div class="mb-4 text-primary">
            <TablerIcon name="tabler:target" className="w-12 h-12" />
          </div>
          <h3 class="text-xl font-bold dark:text-white mb-2">Perforating</h3>
          <p class="text-muted dark:text-slate-300 mb-4">Precision perforating services to optimize well completion and production performance.</p>
          <ul class="space-y-2 text-sm text-muted dark:text-slate-400">
            <li>• Precision perforating systems</li>
            <li>• TCP (Tubing Conveyed Perforating)</li>
            <li>• Safety-focused operations</li>
          </ul>
        </div>

        <div class="bg-gray-50 dark:bg-gray-900 rounded-xl p-6 border-2 border-gray-200 dark:border-gray-700 hover:border-primary transition-all hover:shadow-xl">
          <div class="mb-4 text-primary">
            <TablerIcon name="tabler:lock" className="w-12 h-12" />
          </div>
          <h3 class="text-xl font-bold dark:text-white mb-2">Setting Plugs & Packers</h3>
          <p class="text-muted dark:text-slate-300 mb-4">Professional setting of plugs and packers for well isolation and completion operations.</p>
          <ul class="space-y-2 text-sm text-muted dark:text-slate-400">
            <li>• Expert plug and packer setting</li>
            <li>• Well isolation services</li>
            <li>• Reliable sealing solutions</li>
          </ul>
        </div>

        <div class="bg-gray-50 dark:bg-gray-900 rounded-xl p-6 border-2 border-gray-200 dark:border-gray-700 hover:border-primary transition-all hover:shadow-xl">
          <div class="mb-4 text-primary">
            <TablerIcon name="tabler:shield-lock" className="w-12 h-12" />
          </div>
          <h3 class="text-xl font-bold dark:text-white mb-2">Plug & Abandonment</h3>
          <p class="text-muted dark:text-slate-300 mb-4">Safe and compliant plug and abandonment services following industry best practices.</p>
          <ul class="space-y-2 text-sm text-muted dark:text-slate-400">
            <li>• Regulatory compliance</li>
            <li>• Safe abandonment procedures</li>
            <li>• Full documentation</li>
          </ul>
        </div>

        <div class="bg-gray-50 dark:bg-gray-900 rounded-xl p-6 border-2 border-gray-200 dark:border-gray-700 hover:border-primary transition-all hover:shadow-xl">
          <div class="mb-4 text-primary">
            <TablerIcon name="tabler:gauge" className="w-12 h-12" />
          </div>
          <h3 class="text-xl font-bold dark:text-white mb-2">Hydrotesting</h3>
          <p class="text-muted dark:text-slate-300 mb-4">Reliable hydrotesting services to ensure equipment integrity and safety compliance.</p>
          <ul class="space-y-2 text-sm text-muted dark:text-slate-400">
            <li>• Equipment integrity testing</li>
            <li>• Safety compliance</li>
            <li>• Certified testing</li>
          </ul>
        </div>

        <div class="bg-gray-50 dark:bg-gray-900 rounded-xl p-6 border-2 border-gray-200 dark:border-gray-700 hover:border-primary transition-all hover:shadow-xl">
          <div class="mb-4 text-primary">
            <TablerIcon name="tabler:plug-connected" className="w-12 h-12" />
          </div>
          <h3 class="text-xl font-bold dark:text-white mb-2">Slick E-Line</h3>
          <p class="text-muted dark:text-slate-300 mb-4">Our newest addition: Combined slickline and e-line capabilities for versatile operations.</p>
          <ul class="space-y-2 text-sm text-muted dark:text-slate-400">
            <li>• Combined capabilities</li>
            <li>• Latest technology</li>
            <li>• Innovative solutions</li>
          </ul>
        </div>

        <div class="bg-gray-50 dark:bg-gray-900 rounded-xl p-6 border-2 border-gray-200 dark:border-gray-700 hover:border-primary transition-all hover:shadow-xl">
          <div class="mb-4 text-primary">
            <TablerIcon name="tabler:camera" className="w-12 h-12" />
          </div>
          <h3 class="text-xl font-bold dark:text-white mb-2">Cameras</h3>
          <p class="text-muted dark:text-slate-300 mb-4">Downhole camera services for visual inspection and diagnostics.</p>
          <ul class="space-y-2 text-sm text-muted dark:text-slate-400">
            <li>• High-resolution cameras</li>
            <li>• Visual inspection</li>
            <li>• Real-time video feed</li>
          </ul>
        </div>
      </div>

      <!-- Additional Services List ******************* -->
      <div class="bg-primary/5 dark:bg-primary/10 rounded-xl p-8 border border-primary/20">
        <h3 class="text-2xl font-bold dark:text-white mb-6 text-center">Additional Services</h3>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-center">
          <div class="flex items-center justify-center gap-2 text-muted dark:text-slate-300 font-medium">
            <TablerIcon name="tabler:tool" className="w-5 h-5 text-primary" />
            <span>Pipe Recovery</span>
          </div>
          <div class="flex items-center justify-center gap-2 text-muted dark:text-slate-300 font-medium">
            <TablerIcon name="tabler:bolt" className="w-5 h-5 text-primary" />
            <span>7-Conductor Wireline</span>
          </div>
          <div class="flex items-center justify-center gap-2 text-muted dark:text-slate-300 font-medium">
            <TablerIcon name="tabler:arrow-up" className="w-5 h-5 text-primary" />
            <span>Third Party Hoisting</span>
          </div>
          <div class="flex items-center justify-center gap-2 text-muted dark:text-slate-300 font-medium">
            <TablerIcon name="tabler:fish" className="w-5 h-5 text-primary" />
            <span>Fishing</span>
          </div>
          <div class="flex items-center justify-center gap-2 text-muted dark:text-slate-300 font-medium">
            <TablerIcon name="tabler:wave" className="w-5 h-5 text-primary" />
            <span>Flow Diagnostics</span>
          </div>
          <div class="flex items-center justify-center gap-2 text-muted dark:text-slate-300 font-medium">
            <TablerIcon name="tabler:bolt" className="w-5 h-5 text-primary" />
            <span>TCP</span>
          </div>
          <div class="flex items-center justify-center gap-2 text-muted dark:text-slate-300 font-medium">
            <TablerIcon name="tabler:scissors" className="w-5 h-5 text-primary" />
            <span>Kinley Cutter</span>
          </div>
          <div class="text-muted dark:text-slate-300 font-medium">+ More</div>
        </div>
        <div class="text-center mt-8">
          <a href="/services" class="btn-primary inline-flex items-center">
            View Complete Services List <span class="ml-2">→</span>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Enhanced Features Widget (Core Values Overview) *************** -->

  <Features
    id="values"
    tagline="Why Choose Wood Wireline"
    title="Built on Experience, Driven by Excellence"
    subtitle="With decades of hands-on experience, we understand what it takes to provide solutions that stand the test of time. Every project is carried out with precision, efficiency, and the highest safety standards."
    items={[
      {
        title: 'Experience That Matters',
        description:
          "With decades of combined knowledge, our crews bring precision and problem-solving to every run. We've seen it all and we know how to handle it. That experience means fewer delays, smarter decisions, and better results for our clients.",
        icon: 'tabler:briefcase',
      },
      {
        title: 'Pride in the Job',
        description:
          "We don't just get it done, we get it done right. Clean trucks, organized crews, and tight operations are what separate us from the rest. That pride shows up in every call we take and every client we serve.",
        icon: 'tabler:award',
      },
      {
        title: 'Safety Above All',
        description:
          "Safety isn't just a policy, it's part of who we are. From the rig floor to the road home, every job follows the highest safety standards. Our people, our clients, and our communities depend on it.",
        icon: 'tabler:shield-check',
      },
      {
        title: 'Customer Service, Always',
        description:
          "Whether it's the middle of the day or the middle of the night, Wood Wireline shows up ready to work. Quick rigs, tight turnarounds, and honest communication are what we're built on.",
        icon: 'tabler:headset',
      },
      {
        title: 'Flexibility & Family',
        description:
          "We take care of our people, and they take care of the work. With full coverage for employees and their families, low turnover, and strong loyalty, our team operates like a family. One that shows up, works hard, and has each other's backs.",
        icon: 'tabler:users',
      },
      {
        title: 'Ready When You Are',
        description:
          'Our crews are among the most efficient in wireline, ready to deliver results from the moment we cross the cattle guard. We understand what it takes to keep operations moving.',
        icon: 'tabler:clock',
      },
    ]}
  />

  <!-- Enhanced Content Widget (About Section) with Images **************** -->

  <Content
    isReversed
    tagline="About Wood Wireline"
    title="Serving the Powder River Basin and Beyond"
    items={[
      {
        title: 'Established 1977',
        description:
          'Nearly five decades of experience serving the oil and gas industry with unwavering commitment to excellence. Our mission is not simply to meet expectations, but to consistently exceed them.',
      },
      {
        title: 'Primary Service Basins',
        description:
          'We primarily serve the Williston, Bakken, DJ, Big Horn and Powder River Basins with comprehensive wireline services. Our crews are ready to deliver results from the moment we cross the cattle guard.',
      },
      {
        title: 'Comprehensive Services',
        description:
          "From Slickline and E-line to Swabbing, Hydrotesting, and our newest addition, Slick E-line - we've got you covered. With decades of hands-on experience, we understand what it takes to provide solutions that stand the test of time.",
      },
    ]}
    image={{
      src: '~/assets/images/All Images/Wood Wireline Truck-BdikWvmwck.webp',
      alt: 'Wood Wireline Operations',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-3xl md:text-4xl font-bold tracking-tight dark:text-white mb-4">Our Mission</h3>
      <p class="text-lg md:text-xl text-muted dark:text-slate-300 mb-6 leading-relaxed">
        To deliver dependable, safe, and efficient wireline services that keep our clients' operations moving. No excuses, no downtime. We show up ready, perform with precision, and take pride in doing the job right the first time.
      </p>
      <p class="text-base md:text-lg text-muted dark:text-slate-400 leading-relaxed">
        Our mission is not simply to meet expectations, but to consistently exceed them. With decades of hands-on experience, we understand what it takes to provide solutions that stand the test of time.
      </p>
    </Fragment>
  </Content>

  <!-- Enhanced Content Widget (Service Areas) with Images **************** -->

  <Content
    tagline="Service Areas"
    title="Serving Operators Across Multiple Basins"
    items={[
      {
        title: 'Gillette, WY',
        description: 'Primary operations base serving the Powder River Basin with comprehensive wireline services and 24/7 availability.',
      },
      {
        title: 'Casper, WY',
        description: 'Full-service wireline operations in the DJ Basin. Ready to deliver results when you need us most.',
      },
      {
        title: 'Dickinson, ND',
        description: 'Serving operators in the Williston Basin with efficient crews and reliable service delivery.',
      },
      {
        title: 'Williston, ND',
        description: 'Comprehensive wireline services in the Bakken. Our crews are ready from the moment we cross the cattle guard.',
      },
    ]}
    image={{
      src: '~/assets/images/All Images/Oilfield Operations With Crane And Truck.webp',
      alt: 'Service Areas',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-3xl md:text-4xl font-bold tracking-tight dark:text-white mb-4">Where We Operate</h3>
      <p class="text-lg md:text-xl text-muted dark:text-slate-300 mb-4 leading-relaxed">
        We primarily serve the Williston, Bakken, DJ, Big Horn and Powder River Basins, offering comprehensive wireline services to operators across the region.
      </p>
      <p class="text-base md:text-lg text-muted dark:text-slate-400 leading-relaxed">
        Our crews are ready to deliver results from the moment we cross the cattle guard. No excuses, no downtime. Just results.
      </p>
    </Fragment>
  </Content>

  <!-- Enhanced CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Get a Quote',
        href: '/contact',
        icon: 'tabler:phone',
      },
      {
        text: 'Learn More',
        href: '/about',
        variant: 'secondary',
      },
    ]}
  >
    <Fragment slot="title">
      Ready to Work? <br class="block sm:hidden" /><span class="sm:whitespace-nowrap">We're Ready Too.</span>
    </Fragment>

    <Fragment slot="subtitle">
      Contact us today for reliable wireline services across the Powder River Basin and beyond. <br class="hidden md:inline" />
      No excuses, no downtime. Just results.
    </Fragment>
  </CallToAction>
</Layout>
