---
import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';
import Layout from '~/layouts/PageLayout.astro';
import Image from '~/components/common/Image.astro';
import TablerIcon from '~/components/ui/TablerIcon.astro';

const metadata = {
  title: 'About Us',
};
---

<Layout metadata={metadata}>
  <!-- Enhanced Hero Widget ******************* -->

  <Hero
    tagline="About Wood Wireline"
    actions={[
      { variant: 'primary', text: 'Contact Us', href: '/contact', icon: 'tabler:phone' },
      { variant: 'secondary', text: 'Our Services', href: '/services' },
    ]}
  >
    <Fragment slot="title">
      <span class="text-gray-900 dark:text-white">ABOUT WOOD WIRELINE</span><br />
      <span class="text-gray-900 dark:text-white text-2xl md:text-3xl font-normal mt-4 block"
        >Nearly five decades of excellence</span
      >
    </Fragment>

    <Fragment slot="bg">
      <Image
        src="~/assets/images/All Images/Oil Rig Workers Onsite.webp"
        alt="Wood Wireline Operations"
        class="absolute inset-0 w-full h-full object-cover opacity-50 dark:opacity-30"
        widths={[1920, 2560]}
        sizes="100vw"
        style="min-width: 100%; width: 100%; height: 100%; object-fit: cover;"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-black/42 via-black/30 to-black/42"></div>
    </Fragment>
  </Hero>

  <!-- Operations in Action Section ******************* -->

  <section class="py-16 md:py-24 bg-gray-50 dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <!-- Content Column -->
        <div>
          <p class="text-base font-semibold text-secondary dark:text-blue-200 uppercase tracking-wide mb-2">
            Field Operations
          </p>
          <h2 class="text-4xl md:text-5xl font-bold tracking-tight dark:text-white mb-6">
            Professional Crews, Proven Results
          </h2>
          <p class="text-lg md:text-xl text-muted dark:text-slate-300 mb-6 leading-relaxed">
            From the Powder River Basin to the Bakken, our crews deliver reliable wireline services with maintained
            equipment and decades of combined field experience.
          </p>
          <div class="space-y-4 mb-8">
            <div class="flex items-start">
              <div class="flex-shrink-0 w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mr-4">
                <span class="text-2xl font-bold text-primary">48</span>
              </div>
              <div>
                <h3 class="text-lg font-semibold dark:text-white mb-1">Years of Experience</h3>
                <p class="text-base text-muted dark:text-slate-400">
                  Nearly five decades serving operators across five major basins
                </p>
              </div>
            </div>
            <div class="flex items-start">
              <div class="flex-shrink-0 w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mr-4">
                <span class="text-2xl font-bold text-primary">24/7</span>
              </div>
              <div>
                <h3 class="text-lg font-semibold dark:text-white mb-1">Availability</h3>
                <p class="text-base text-muted dark:text-slate-400">
                  Round-the-clock emergency service from four strategic locations
                </p>
              </div>
            </div>
            <div class="flex items-start">
              <div class="flex-shrink-0 w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mr-4">
                <span class="text-2xl font-bold text-primary">16+</span>
              </div>
              <div>
                <h3 class="text-lg font-semibold dark:text-white mb-1">Service Capabilities</h3>
                <p class="text-base text-muted dark:text-slate-400">
                  Comprehensive wireline solutions from logging to perforating
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Images Column - Asymmetric Grid -->
        <div class="relative">
          <!-- Main large image -->
          <div class="relative mb-4">
            <Image
              src="~/assets/images/All Images/Wood Wireline Truck-BdikWvmwck.webp"
              alt="Wood Wireline Service Truck"
              class="w-full h-[400px] object-cover rounded-lg shadow-2xl"
              widths={[600, 900]}
              sizes="(max-width: 768px) 100vw, 50vw"
            />
            <div class="absolute -bottom-6 -left-6 w-32 h-32 bg-primary/20 rounded-lg -z-10"></div>
          </div>

          <!-- Bottom row of smaller images -->
          <div class="grid grid-cols-3 gap-4">
            <div class="relative">
              <Image
                src="~/assets/images/All Images/Oil Rig Worker.webp"
                alt="Experienced Wireline Operator"
                class="w-full h-32 object-cover rounded-lg shadow-lg"
                widths={[300, 400]}
                sizes="(max-width: 768px) 33vw, 16vw"
              />
            </div>
            <div class="relative">
              <Image
                src="~/assets/images/All Images/Oil Rig Equipment.webp"
                alt="Wireline Equipment"
                class="w-full h-32 object-cover rounded-lg shadow-lg"
                widths={[300, 400]}
                sizes="(max-width: 768px) 33vw, 16vw"
              />
            </div>
            <div class="relative">
              <Image
                src="~/assets/images/All Images/Oilfield Workers On Site.webp"
                alt="Field Crew in Action"
                class="w-full h-32 object-cover rounded-lg shadow-lg"
                widths={[300, 400]}
                sizes="(max-width: 768px) 33vw, 16vw"
              />
            </div>
          </div>

          <!-- Decorative element -->
          <div class="absolute -top-6 -right-6 w-24 h-24 bg-secondary/10 rounded-lg -z-10"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Enhanced Mission Section ****************** -->

  <Content
    id="mission"
    tagline="Our Approach"
    title="Field-Proven Performance"
    items={[]}
    image={{
      src: '~/assets/images/All Images/Oil Rig Worker Monitoring Equipment.webp',
      alt: 'Mission',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-3xl md:text-4xl font-bold tracking-tight dark:text-white mb-6">How We Operate</h3>
      <p class="text-lg md:text-xl text-muted dark:text-slate-300 mb-6 leading-relaxed">
        Wood Wireline delivers safe, efficient wireline services that keep operations running. We execute complex jobs
        correctly the first time, minimizing downtime and maximizing productivity.
      </p>
      <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-6 border-l-4 border-primary">
        <p class="text-base md:text-lg text-muted dark:text-slate-400 leading-relaxed">
          Professional crews. Maintained equipment. Proven processes. Safety and quality are non-negotiable on every job
          site.
        </p>
      </div>
    </Fragment>
  </Content>

  <!-- Enhanced Vision Section ****************** -->

  <Content
    id="vision"
    isReversed
    tagline="Our Commitment"
    title="Built on Results, Sustained by Relationships"
    items={[]}
    image={{
      src: '~/assets/images/All Images/Oilfield Workers Operating Machinery.webp',
      alt: 'Vision',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-3xl md:text-4xl font-bold tracking-tight dark:text-white mb-6">What Drives Us</h3>
      <p class="text-lg md:text-xl text-muted dark:text-slate-300 mb-6 leading-relaxed">
        Building long-term partnerships with operators across the Rocky Mountain region through consistent, professional
        wireline services.
      </p>
      <div class="space-y-4">
        <div class="flex items-start">
          <span class="text-primary mr-3 text-xl font-bold">•</span>
          <p class="text-base text-muted dark:text-slate-400">
            <strong>Reliability:</strong> Show up when committed, deliver what's promised
          </p>
        </div>
        <div class="flex items-start">
          <span class="text-primary mr-3 text-xl font-bold">•</span>
          <p class="text-base text-muted dark:text-slate-400">
            <strong>Efficiency:</strong> Fast mobilization, minimal rig time, rapid turnaround
          </p>
        </div>
        <div class="flex items-start">
          <span class="text-primary mr-3 text-xl font-bold">•</span>
          <p class="text-base text-muted dark:text-slate-400">
            <strong>Partnership:</strong> Long-term relationships built on mutual success
          </p>
        </div>
      </div>
    </Fragment>
  </Content>

  <!-- Operating Principles Section ****************** -->

  <section class="py-16 md:py-24 bg-white dark:bg-gray-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-12 md:mb-16">
        <p class="text-base font-semibold text-secondary dark:text-blue-200 uppercase tracking-wide mb-2">
          Our Foundation
        </p>
        <h2 class="text-4xl md:text-5xl font-bold tracking-tight dark:text-white mb-4">Operating Principles</h2>
        <p class="text-xl text-muted dark:text-slate-300 max-w-3xl mx-auto">
          48 years of field experience distilled into five core principles that guide every job.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
        <!-- Field Experience -->
        <div
          class="group bg-gray-50 dark:bg-gray-900 rounded-xl p-6 md:p-8 hover:shadow-xl transition-all border-l-4 border-primary"
        >
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 rounded-lg bg-primary/10 flex items-center justify-center mr-4">
              <TablerIcon name="tabler:briefcase" className="w-6 h-6 text-primary" />
            </div>
            <h3 class="text-xl md:text-2xl font-bold dark:text-white">Field Experience</h3>
          </div>
          <p class="text-base text-muted dark:text-slate-400 leading-relaxed">
            Decades of combined wireline experience across multiple basins. Our operators have handled complex wells,
            challenging formations, and time-critical operations. Experience reduces risk and improves outcomes.
          </p>
        </div>

        <!-- Operational Standards -->
        <div
          class="group bg-gray-50 dark:bg-gray-900 rounded-xl p-6 md:p-8 hover:shadow-xl transition-all border-l-4 border-secondary"
        >
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 rounded-lg bg-secondary/10 flex items-center justify-center mr-4">
              <TablerIcon name="tabler:award" className="w-6 h-6 text-secondary" />
            </div>
            <h3 class="text-xl md:text-2xl font-bold dark:text-white">Operational Standards</h3>
          </div>
          <p class="text-base text-muted dark:text-slate-400 leading-relaxed">
            Maintained equipment, organized job sites, and professional execution. Our standards ensure consistent
            performance regardless of conditions or complexity.
          </p>
        </div>

        <!-- Team Stability -->
        <div
          class="group bg-gray-50 dark:bg-gray-900 rounded-xl p-6 md:p-8 hover:shadow-xl transition-all border-l-4 border-primary"
        >
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 rounded-lg bg-primary/10 flex items-center justify-center mr-4">
              <TablerIcon name="tabler:users" className="w-6 h-6 text-primary" />
            </div>
            <h3 class="text-xl md:text-2xl font-bold dark:text-white">Team Stability</h3>
          </div>
          <p class="text-base text-muted dark:text-slate-400 leading-relaxed">
            Low turnover means experienced hands on your jobs. We invest in our people through competitive benefits and
            professional development, resulting in a stable, skilled workforce.
          </p>
        </div>

        <!-- Responsive Service -->
        <div
          class="group bg-gray-50 dark:bg-gray-900 rounded-xl p-6 md:p-8 hover:shadow-xl transition-all border-l-4 border-secondary"
        >
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 rounded-lg bg-secondary/10 flex items-center justify-center mr-4">
              <TablerIcon name="tabler:headset" className="w-6 h-6 text-secondary" />
            </div>
            <h3 class="text-xl md:text-2xl font-bold dark:text-white">Responsive Service</h3>
          </div>
          <p class="text-base text-muted dark:text-slate-400 leading-relaxed">
            24/7 availability and rapid mobilization. Our dispatch team coordinates efficient scheduling to minimize
            your downtime and keep operations moving.
          </p>
        </div>

        <!-- Safety Protocols -->
        <div
          class="group bg-gray-50 dark:bg-gray-900 rounded-xl p-6 md:p-8 hover:shadow-xl transition-all border-l-4 border-primary md:col-span-2 lg:col-span-1"
        >
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 rounded-lg bg-primary/10 flex items-center justify-center mr-4">
              <TablerIcon name="tabler:shield-check" className="w-6 h-6 text-primary" />
            </div>
            <h3 class="text-xl md:text-2xl font-bold dark:text-white">Safety Protocols</h3>
          </div>
          <p class="text-base text-muted dark:text-slate-400 leading-relaxed">
            Comprehensive safety programs on every job site. Our safety record reflects our commitment to protecting
            personnel, equipment, and the environment.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Leadership & History Combined Section ****************** -->

  <section class="py-16 md:py-24 bg-gray-50 dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <!-- Leadership Team -->
      <div class="mb-20 md:mb-28">
        <div class="text-center mb-12 md:mb-16">
          <p class="text-base font-semibold text-secondary dark:text-blue-200 uppercase tracking-wide mb-2">
            Leadership
          </p>
          <h2 class="text-4xl md:text-5xl font-bold tracking-tight dark:text-white mb-4">Executive Team</h2>
          <p class="text-xl text-muted dark:text-slate-300 max-w-3xl mx-auto">
            Decades of combined wireline operations and business management experience.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div
            class="group bg-white dark:bg-gray-800 rounded-xl overflow-hidden shadow-lg hover:shadow-2xl transition-all border-t-4 border-primary"
          >
            <div class="relative h-72 overflow-hidden">
              <Image
                src="~/assets/images/team/Dusty.jpg"
                alt="Dusty - Operations Leadership"
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                widths={[400, 600]}
                sizes="(max-width: 768px) 100vw, 33vw"
              />
            </div>
            <div class="p-6">
              <h3 class="text-2xl font-bold dark:text-white mb-1">Dusty</h3>
              <p class="text-primary font-semibold mb-3">Operations Leadership</p>
              <p class="text-base text-muted dark:text-slate-400">
                Field operations and technical oversight across all service locations.
              </p>
            </div>
          </div>
          <div
            class="group bg-white dark:bg-gray-800 rounded-xl overflow-hidden shadow-lg hover:shadow-2xl transition-all border-t-4 border-secondary"
          >
            <div class="relative h-72 overflow-hidden">
              <Image
                src="~/assets/images/team/Tiffany.jpg"
                alt="Tiffany - Safety & Compliance"
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                widths={[400, 600]}
                sizes="(max-width: 768px) 100vw, 33vw"
              />
            </div>
            <div class="p-6">
              <h3 class="text-2xl font-bold dark:text-white mb-1">Tiffany</h3>
              <p class="text-secondary font-semibold mb-3">Safety & Compliance</p>
              <p class="text-base text-muted dark:text-slate-400">
                Safety programs, regulatory compliance, and quality assurance.
              </p>
            </div>
          </div>
          <div
            class="group bg-white dark:bg-gray-800 rounded-xl overflow-hidden shadow-lg hover:shadow-2xl transition-all border-t-4 border-primary"
          >
            <div class="relative h-72 overflow-hidden">
              <Image
                src="~/assets/images/team/Justin.jpg"
                alt="Justin - Business Development"
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                widths={[400, 600]}
                sizes="(max-width: 768px) 100vw, 33vw"
              />
            </div>
            <div class="p-6">
              <h3 class="text-2xl font-bold dark:text-white mb-1">Justin</h3>
              <p class="text-primary font-semibold mb-3">Business Development</p>
              <p class="text-base text-muted dark:text-slate-400">
                Client relations and strategic growth across service territories.
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Company History Timeline -->
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <!-- Content Column -->
        <div>
          <p class="text-base font-semibold text-secondary dark:text-blue-200 uppercase tracking-wide mb-2">
            Our History
          </p>
          <h2 class="text-4xl md:text-5xl font-bold tracking-tight dark:text-white mb-6">
            48 Years of Wireline Services
          </h2>
          <p class="text-lg md:text-xl text-muted dark:text-slate-300 mb-8 leading-relaxed">
            Nearly five decades of continuous operations in the Rocky Mountain region. Wood Wireline's longevity
            reflects our commitment to safe, efficient service delivery.
          </p>
          <p class="text-base text-muted dark:text-slate-400 mb-8 leading-relaxed">
            Our reputation is built on performance: experienced crews, maintained equipment, and professional execution
            on every job site.
          </p>

          <!-- Timeline -->
          <div class="space-y-6">
            <div class="flex">
              <div class="flex-shrink-0 w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center mr-4">
                <span class="text-primary font-bold">1977</span>
              </div>
              <div>
                <h3 class="text-lg font-bold dark:text-white mb-1">Founded in Gillette</h3>
                <p class="text-base text-muted dark:text-slate-400">
                  Wood Wireline established operations in Gillette, WY, serving Powder River Basin operators with
                  professional wireline services.
                </p>
              </div>
            </div>
            <div class="flex">
              <div class="flex-shrink-0 w-12 h-12 rounded-full bg-secondary/10 flex items-center justify-center mr-4">
                <TablerIcon name="tabler:map-pin" className="w-6 h-6 text-secondary" />
              </div>
              <div>
                <h3 class="text-lg font-bold dark:text-white mb-1">Regional Expansion</h3>
                <p class="text-base text-muted dark:text-slate-400">
                  Strategic expansion into Williston, Bakken, DJ, and Big Horn basins. Four locations providing
                  comprehensive regional coverage.
                </p>
              </div>
            </div>
            <div class="flex">
              <div class="flex-shrink-0 w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center mr-4">
                <TablerIcon name="tabler:tool" className="w-6 h-6 text-primary" />
              </div>
              <div>
                <h3 class="text-lg font-bold dark:text-white mb-1">Service Capabilities</h3>
                <p class="text-base text-muted dark:text-slate-400">
                  Continuous investment in equipment and technology. Recent addition of Slick E-line combines
                  traditional capabilities with modern efficiency.
                </p>
              </div>
            </div>
            <div class="flex">
              <div class="flex-shrink-0 w-12 h-12 rounded-full bg-secondary/10 flex items-center justify-center mr-4">
                <TablerIcon name="tabler:handshake" className="w-6 h-6 text-secondary" />
              </div>
              <div>
                <h3 class="text-lg font-bold dark:text-white mb-1">Industry Partnerships</h3>
                <p class="text-base text-muted dark:text-slate-400">
                  Long-term relationships with major and independent operators built on consistent performance and
                  professional service delivery.
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Image Column -->
        <div class="relative">
          <Image
            src="~/assets/images/All Images/Oilfield Operations With Crane And Truck.webp"
            alt="Wood Wireline Operations History"
            class="w-full h-[600px] object-cover rounded-xl shadow-2xl"
            widths={[600, 900]}
            sizes="(max-width: 768px) 100vw, 50vw"
          />
          <div class="absolute -bottom-6 -left-6 w-32 h-32 bg-primary/20 rounded-lg -z-10"></div>
          <div class="absolute -top-6 -right-6 w-24 h-24 bg-secondary/20 rounded-lg -z-10"></div>
        </div>
      </div>
    </div>
  </section>
</Layout>
