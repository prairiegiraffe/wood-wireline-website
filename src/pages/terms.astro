---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Image from '~/components/common/Image.astro';

const metadata = {
  title: 'Terms of Service - Wood Wireline',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero tagline="Legal">
    <Fragment slot="title">
      <span class="text-gray-900 dark:text-white">TERMS OF SERVICE</span>
    </Fragment>

    <Fragment slot="bg">
      <Image
        src="~/assets/images/All Images/Wood Wireline Truck-BdikWvmwck.webp"
        alt="Terms of Service"
        class="absolute inset-0 w-full h-full object-cover opacity-30 dark:opacity-20"
        widths={[1920, 2560]}
        sizes="100vw"
        style="min-width: 100%; width: 100%; height: 100%; object-fit: cover;"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-black/50 via-black/40 to-black/50"></div>
    </Fragment>
  </Hero>

  <!-- Terms Content -->
  <section class="py-16 md:py-24 bg-white dark:bg-gray-800">
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <div class="prose prose-lg dark:prose-invert max-w-none">
        <p class="text-sm text-muted dark:text-slate-400 mb-8">
          <strong>Last Updated:</strong>
          {new Date().toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
        </p>

        <p class="lead text-xl text-muted dark:text-slate-300 mb-8">
          Please read these Terms of Service carefully before using Wood Wireline services or accessing our website.
        </p>

