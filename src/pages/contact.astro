---
import Layout from '~/layouts/PageLayout.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Hero from '~/components/widgets/Hero.astro';
import Image from '~/components/common/Image.astro';
import TablerIcon from '~/components/ui/TablerIcon.astro';

const metadata = {
  title: 'Contact Us',
};
---

<Layout metadata={metadata}>
  <!-- Enhanced Hero Widget with Image ******************* -->

  <Hero
    tagline="Contact"
    actions={[
      { variant: 'primary', text: 'Call Now', href: 'tel:307-682-0143', icon: 'tabler:phone' },
      { variant: 'secondary', text: 'View Services', href: '/services' },
    ]}
  >
    <Fragment slot="bg">
      <Image
        src="~/assets/images/All Images/Wood Wireline Truck-VIF53Zk16v.webp"
        alt="Contact Wood Wireline"
        class="absolute inset-0 w-full h-full object-cover min-w-full"
        widths={[1920, 2560]}
        sizes="100vw"
        style="min-width: 100%; width: 100%; height: 100%; object-fit: cover;"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-black/50 via-black/35 to-black/50"></div>
    </Fragment>
    <Fragment slot="title">
      <span class="text-white text-5xl md:text-6xl font-bold">Contact Us</span>
    </Fragment>
    <Fragment slot="subtitle">
      <p class="text-xl md:text-2xl leading-relaxed text-white">Ready when you are</p>
    </Fragment>
  </Hero>

  <!-- Contact Form ******************* -->

  <ContactUs
    id="form"
    title="Request a Quote"
    subtitle="Fill out the form below and we'll get back to you as soon as possible. For immediate assistance, call us at <a href='tel:307-682-0143' class='text-primary hover:underline font-semibold'>307-682-0143</a>."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
      {
        type: 'tel',
        name: 'phone',
        label: 'Phone',
      },
      {
        type: 'text',
        name: 'company',
        label: 'Company',
      },
    ]}
    textarea={{
      label: 'Message',
      placeholder: 'Tell us about your wireline service needs...',
    }}
    disclaimer={{
      label:
        'By submitting this contact form, you acknowledge and agree to the collection of your personal information.',
    }}
    description="Our team typically responds within 24 hours. For urgent requests, please call us directly."
  />

  <!-- Enhanced Features2 Widget with Photos ************** -->

  <div class="max-w-7xl mx-auto px-4 sm:px-6 py-16 md:py-24">
    <div class="text-center mb-12">
      <h2 class="text-4xl md:text-5xl font-bold tracking-tight dark:text-white mb-4">Contact Information</h2>
      <p class="text-xl text-muted dark:text-slate-300 max-w-3xl mx-auto">
        Multiple ways to reach us. We're here when you need us.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
      <div
        class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6 text-center group hover:shadow-xl transition-shadow"
      >
        <div
          class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-primary/10 text-primary mb-4 group-hover:scale-110 transition-transform"
        >
          <TablerIcon name="tabler:phone" className="w-8 h-8" />
        </div>
        <h3 class="text-xl font-bold dark:text-white mb-2">Phone</h3>
        <p class="text-muted dark:text-slate-300">
          <a href="tel:307-682-0143" class="text-primary hover:underline text-lg font-semibold">307-682-0143</a>
        </p>
      </div>

      <div
        class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6 text-center group hover:shadow-xl transition-shadow"
      >
        <div
          class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-primary/10 text-primary mb-4 group-hover:scale-110 transition-transform"
        >
          <TablerIcon name="tabler:mail" className="w-8 h-8" />
        </div>
        <h3 class="text-xl font-bold dark:text-white mb-2">Email</h3>
        <p class="text-muted dark:text-slate-300">
          <a href="mailto:alicia@kutthru.com" class="text-primary hover:underline">alicia@kutthru.com</a>
        </p>
      </div>

      <div
        class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6 text-center group hover:shadow-xl transition-shadow"
      >
        <div
          class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-primary/10 text-primary mb-4 group-hover:scale-110 transition-transform"
        >
          <TablerIcon name="tabler:map-pin" className="w-8 h-8" />
        </div>
        <h3 class="text-xl font-bold dark:text-white mb-2">Address</h3>
        <p class="text-muted dark:text-slate-300">
          3106 East 2nd Street<br />Gillette, WY
        </p>
      </div>

      <div
        class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6 text-center group hover:shadow-xl transition-shadow"
      >
        <div
          class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-primary/10 text-primary mb-4 group-hover:scale-110 transition-transform"
        >
          <TablerIcon name="tabler:map" className="w-8 h-8" />
        </div>
        <h3 class="text-xl font-bold dark:text-white mb-2">Service Areas</h3>
        <p class="text-muted dark:text-slate-300">
          Gillette, WY • Casper, WY<br />Dickinson, ND • Williston, ND
        </p>
      </div>

      <div
        class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6 text-center group hover:shadow-xl transition-shadow"
      >
        <div
          class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-primary/10 text-primary mb-4 group-hover:scale-110 transition-transform"
        >
          <TablerIcon name="tabler:clock" className="w-8 h-8" />
        </div>
        <h3 class="text-xl font-bold dark:text-white mb-2">Hours</h3>
        <p class="text-muted dark:text-slate-300">
          24/7 Emergency Service<br />Available when you need us
        </p>
      </div>

      <div
        class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6 text-center group hover:shadow-xl transition-shadow"
      >
        <div
          class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-primary/10 text-primary mb-4 group-hover:scale-110 transition-transform"
        >
          <TablerIcon name="tabler:rocket" className="w-8 h-8" />
        </div>
        <h3 class="text-xl font-bold dark:text-white mb-2">Response Time</h3>
        <p class="text-muted dark:text-slate-300">
          Quick rigs, tight turnarounds<br />Ready when you are
        </p>
      </div>
    </div>
  </div>
</Layout>
