          <div class="space-y-3">
            <div>
              <p class="font-semibold dark:text-white">Chris Hanson</p>
              <p class="text-sm text-muted dark:text-slate-300">
                <a href="tel:701-580-2130" class="text-secondary hover:underline">(701) 580-2130</a> •
                <a href="mailto:hanson@woodwireline.com" class="text-secondary hover:underline"
                  >hanson@woodwireline.com</a
                >
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- 24/7 Service Notice -->
      <div class="mt-12 bg-primary/10 dark:bg-primary/20 rounded-xl p-6 md:p-8 text-center">
        <div class="flex items-center justify-center mb-4">
          <TablerIcon name="tabler:clock-24" className="w-8 h-8 text-primary mr-3" />
          <h3 class="text-2xl font-bold dark:text-white">24/7 Service Available</h3>
        </div>
        <p class="text-lg text-muted dark:text-slate-300 mb-4">Emergency service calls anytime, day or night</p>
        <a href="tel:307-682-0143" class="text-2xl font-bold text-primary hover:underline">(307) 682-0143</a>
      </div>
    </div>
  </section>
</Layout>
