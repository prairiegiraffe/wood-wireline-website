---
import Layout from '~/layouts/PageLayout.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Hero from '~/components/widgets/Hero.astro';
import Image from '~/components/common/Image.astro';
import TablerIcon from '~/components/ui/TablerIcon.astro';

const metadata = {
  title: 'Contact Us',
};
---

<Layout metadata={metadata}>
  <!-- Enhanced Hero Widget with Image ******************* -->

  <Hero
    tagline="Contact"
    actions={[
      { variant: 'primary', text: 'Call Now', href: 'tel:307-682-0143', icon: 'tabler:phone' },
      { variant: 'secondary', text: 'View Services', href: '/services' },
    ]}
  >
    <Fragment slot="title">
      <span class="text-accent dark:text-white">CONTACT US</span><br />
      <span class="text-4xl md:text-5xl font-bold mt-4 block">Ready when you are</span>
    </Fragment>

    <Fragment slot="bg">
      <Image
        src="~/assets/images/All Images/Wood Wireline Truck-VIF53Zk16v.webp"
        alt="Contact Wood Wireline"
        class="absolute inset-0 w-full h-full object-cover opacity-50 dark:opacity-30"
        widths={[1920, 2560]}
        sizes="100vw"
        style="min-width: 100%; width: 100%; height: 100%; object-fit: cover;"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-black/42 via-black/30 to-black/42"></div>
    </Fragment>
  </Hero>

  <!-- Contact Form ******************* -->

  <ContactUs
    id="form"
    title="Request a Quote"
    subtitle="Fill out the form below and we'll get back to you as soon as possible. For immediate assistance, call us at <a href='tel:307-682-0143' class='text-primary hover:underline font-semibold'>307-682-0143</a>."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
      {
        type: 'tel',
        name: 'phone',
        label: 'Phone',
      },
      {
        type: 'text',
        name: 'company',
        label: 'Company',
      },
    ]}
    textarea={{
      label: 'Message',
      placeholder: 'Tell us about your wireline service needs...',
    }}
    disclaimer={{
      label:
        'By submitting this contact form, you acknowledge and agree to the collection of your personal information.',
    }}
    description="Our team typically responds within 24 hours. For urgent requests, please call us directly."
  />

  <!-- Location Contact Cards ************** -->

  <section class="py-16 md:py-24 bg-white dark:bg-gray-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-12">
        <h2 class="text-4xl md:text-5xl font-bold tracking-tight dark:text-white mb-4">Location Contacts</h2>
        <p class="text-xl text-muted dark:text-slate-300 max-w-3xl mx-auto">
          Reach out to any of our four locations for 24/7 service.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Gillette, WY -->
        <div class="bg-gray-50 dark:bg-gray-900 rounded-xl p-6 md:p-8 border-t-4 border-primary">
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 rounded-lg bg-primary/10 flex items-center justify-center mr-4">
              <TablerIcon name="tabler:map-pin" className="w-6 h-6 text-primary" />
            </div>
            <div>
              <h3 class="text-2xl font-bold dark:text-white">Gillette, WY</h3>
              <span class="text-sm text-primary font-semibold">HEADQUARTERS</span>
            </div>
          </div>

          <div class="mb-4 pb-4 border-b border-gray-200 dark:border-gray-700">
            <p class="text-muted dark:text-slate-300">
              3106 East 2nd Street<br />
              Gillette, WY 82716
            </p>
          </div>

          <div class="space-y-3">
            <div>
              <p class="font-semibold dark:text-white">Justin Hargens</p>
              <p class="text-sm text-muted dark:text-slate-300">
                <a href="tel:307-689-8029" class="text-primary hover:underline">(307) 689-8029</a> •
                <a href="mailto:Justin@woodwireline.com" class="text-primary hover:underline">Justin@woodwireline.com</a
                >
              </p>
            </div>
            <div>
              <p class="font-semibold dark:text-white">Dusty Wood</p>
              <p class="text-sm text-muted dark:text-slate-300">
                <a href="tel:307-660-6793" class="text-primary hover:underline">(307) 660-6793</a> •
                <a href="mailto:Dusty@woodwireline.com" class="text-primary hover:underline">Dusty@woodwireline.com</a>
              </p>
            </div>
            <div>
              <p class="font-semibold dark:text-white">Tiffany Wood-Nelson</p>
              <p class="text-sm text-muted dark:text-slate-300">
                <a href="tel:307-686-8256" class="text-primary hover:underline">(307) 686-8256</a> •
                <a href="mailto:Tiffany@woodwireline.com" class="text-primary hover:underline"
                  >Tiffany@woodwireline.com</a
                >
              </p>
            </div>
            <div>
              <p class="font-semibold dark:text-white">Courtney Hargens</p>
              <p class="text-sm text-muted dark:text-slate-300">
                <a href="tel:307-682-0143" class="text-primary hover:underline">(307) 682-0143</a> •
                <a href="mailto:Courtney@woodwireline.com" class="text-primary hover:underline"
