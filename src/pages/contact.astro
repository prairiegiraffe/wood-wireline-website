---
import Layout from '~/layouts/PageLayout.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Hero from '~/components/widgets/Hero.astro';
import Image from '~/components/common/Image.astro';
import TablerIcon from '~/components/ui/TablerIcon.astro';
import SimpleTerrainMap from '~/components/ui/3d-map/SimpleTerrainMap.tsx';

const metadata = {
  title: 'Contact Us',
};
---

<Layout metadata={metadata}>
  <!-- Enhanced Hero Widget with Image ******************* -->

  <Hero
    actions={[
      { variant: 'primary', text: 'Call Now', href: 'tel:307-682-0143', icon: 'tabler:phone' },
      { variant: 'secondary', text: 'View Services', href: '/services' },
    ]}
  >
    <Fragment slot="title">
      <span class="text-gray-900 dark:text-white">CONTACT US</span><br />
      <span class="text-gray-900 dark:text-white text-2xl md:text-3xl font-normal mt-4 block">Ready when you are</span>
    </Fragment>

    <Fragment slot="bg">
      <Image
        src="~/assets/images/All Images/Wood Wireline Truck.webp"
        alt="Contact Wood Wireline"
        class="absolute inset-0 w-full h-full object-cover opacity-50 dark:opacity-30"
        widths={[1920, 2560]}
        sizes="100vw"
        style="min-width: 100%; width: 100%; height: 100%; object-fit: cover;"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-black/42 via-black/30 to-black/42"></div>
    </Fragment>
  </Hero>

  <!-- Contact Form ******************* -->

  <ContactUs
    id="form"
    title="Request a Quote"
    subtitle="Fill out the form below and we'll get back to you as soon as possible. For immediate assistance, call us at <a href='tel:307-682-0143' class='text-primary hover:underline font-semibold'>307-682-0143</a>."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
      {
        type: 'tel',
        name: 'phone',
        label: 'Phone',
      },
      {
        type: 'text',
        name: 'company',
        label: 'Company',
      },
    ]}
    textarea={{
      label: 'Message',
      placeholder: 'Tell us about your wireline service needs...',
    }}
    disclaimer={{
      label:
        'By submitting this contact form, you acknowledge and agree to the collection of your personal information.',
    }}
    description="Our team typically responds within 24 hours. For urgent requests, please call us directly."
  />

  <!-- Interactive 3D Map & Location Details ******************* -->

  <section id="map" class="bg-gray-50 dark:bg-gray-900">
    <!-- Map Header (Desktop & Mobile) -->
    <div class="py-12 md:py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6">
        <div class="text-center mb-8 md:mb-8 mb-4">
          <p class="text-base font-semibold text-secondary dark:text-blue-200 uppercase tracking-wide mb-2">
            Interactive Map
          </p>
          <h2 class="text-4xl md:text-5xl font-bold tracking-tight dark:text-white mb-6">
            Explore Our Service Locations
          </h2>
          <p class="text-xl text-muted dark:text-slate-300 max-w-3xl mx-auto">
            Click on location markers to explore our four strategic operations centers across Wyoming and North Dakota.
          </p>
        </div>

        <!-- Map Container - Taller on mobile to accommodate the full experience -->
        <div class="h-auto md:h-[600px] lg:h-[700px]">
          <SimpleTerrainMap client:only="react" />
        </div>
      </div>
    </div>
  </section>

  <!-- Location Details with Contact Info ************** -->

  <section class="py-16 md:py-24 bg-white dark:bg-gray-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-12">
        <h2 class="text-4xl md:text-5xl font-bold tracking-tight dark:text-white mb-4">Location Contacts</h2>
        <p class="text-xl text-muted dark:text-slate-300 max-w-3xl mx-auto">
          Reach out to any of our four locations for 24/7 service.
