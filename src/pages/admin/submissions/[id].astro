---
// Single Submission Detail View
// Server-rendered with auth

import '~/assets/styles/tailwind.css';
import type { Submission } from '~/lib/types';

export const prerender = false;

const { id } = Astro.params;
const env = Astro.locals.runtime?.env;
const user = Astro.locals.user;
const DB = env?.DB;

let submission: Submission | null = null;
let notFound = false;

if (DB && user && id) {
  try {
    // Build query based on user role
    const isAgency = user.role === 'agency';
    const copyFilter = isAgency ? 'is_agency_copy = 1' : 'is_agency_copy = 0';
    const tenantFilter = isAgency ? '' : ` AND tenant_id = '${user.tenant_id || env.TENANT_ID || 'default'}'`;

    const result = await DB.prepare(
      `
      SELECT * FROM submissions
      WHERE id = ? AND ${copyFilter}${tenantFilter} AND deleted_at IS NULL
    `
    )
      .bind(parseInt(id))
      .first();

    if (result) {
      submission = result as unknown as Submission;
    } else {
      notFound = true;
    }
  } catch (error) {
    console.error('Submission fetch error:', error);
    notFound = true;
  }
}

// Format date helper
function formatDate(dateStr: string): string {
  const date = new Date(dateStr);
  return date.toLocaleDateString('en-US', {
    weekday: 'long',
    month: 'long',
    day: 'numeric',
    year: 'numeric',
    hour: 'numeric',
    minute: '2-digit',
  });
}

// Status options
const statusOptions = [
  { value: 'new', label: 'New', color: 'bg-yellow-100 text-yellow-800' },
  { value: 'reviewed', label: 'Reviewed', color: 'bg-blue-100 text-blue-800' },
  { value: 'contacted', label: 'Contacted', color: 'bg-purple-100 text-purple-800' },
  { value: 'hired', label: 'Hired', color: 'bg-green-100 text-green-800' },
  { value: 'archived', label: 'Archived', color: 'bg-gray-100 text-gray-800' },
];

function getStatusColor(status: string): string {
  return statusOptions.find((s) => s.value === status)?.color || 'bg-gray-100 text-gray-800';
}

const isAgency = user?.role === 'agency';

// Create non-null reference for template use (only used in else branch where we know it's not null)
const sub = submission!;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{submission ? `${sub.name} - Submission` : 'Not Found'} - Admin Dashboard</title>
    <meta name="robots" content="noindex, nofollow" />
  </head>
  <body class="bg-gray-100 min-h-screen">
    <!-- Navigation -->
    <nav class="bg-gray-900 text-white shadow-lg">
      <div class="w-[90%] max-w-screen-2xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16 items-center">
          <div class="flex items-center gap-8">
            <a href="/admin" class="font-bold text-xl">Admin Dashboard</a>
            <div class="hidden md:flex gap-6">
              <a href="/admin" class="text-gray-300 hover:text-white">Dashboard</a>
              <a href="/admin/submissions" class="text-white hover:text-gray-300">All Submissions</a>
              {
                (user?.role === 'agency' || user?.role === 'superadmin') && (
                  <a href="/admin/users" class="text-gray-300 hover:text-white">
                    Users
                  </a>
                )
              }
            </div>
          </div>
          <div class="flex items-center gap-4">
            <a href="/admin/settings" class="text-gray-300 hover:text-white text-sm">Settings</a>
            <span class="text-gray-300 text-sm">
              {user?.name}
              {
                user?.role === 'superadmin' && (
                  <span class="ml-1 text-xs bg-red-600 px-2 py-0.5 rounded">Super Admin</span>
                )
              }
              {user?.role === 'agency' && <span class="ml-1 text-xs bg-purple-600 px-2 py-0.5 rounded">Agency</span>}
            </span>
            <a
              href="/api/admin/logout"
              class="text-gray-300 hover:text-white text-sm bg-gray-800 px-3 py-1.5 rounded hover:bg-gray-700"
            >
              Logout
            </a>
          </div>
        </div>
      </div>
    </nav>

    <main class="w-[90%] max-w-screen-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Back Link -->
      <a href="/admin/submissions" class="inline-flex items-center text-gray-600 hover:text-gray-900 mb-6">
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to Submissions
      </a>

      {
        notFound ? (
          <div class="bg-white rounded-xl shadow p-12 text-center">
            <svg class="w-16 h-16 mx-auto mb-4 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
              />
            </svg>
            <h1 class="text-2xl font-bold text-gray-900 mb-2">Submission Not Found</h1>
            <p class="text-gray-600 mb-6">This submission may have been deleted or you don't have access to it.</p>
            <a
              href="/admin/submissions"
              class="inline-flex px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700"
            >
              View All Submissions
            </a>
          </div>
        ) : (
          <>
            <div class="bg-white rounded-xl shadow mb-6 p-6">
              <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-4">
                <div>
                  <div class="flex items-center gap-3 mb-2">
                    <span
                      class={`inline-flex px-2 py-1 text-xs font-medium rounded ${
                        sub.form_type === 'application' ? 'bg-blue-100 text-blue-800' : 'bg-green-100 text-green-800'
                      }`}
                    >
                      {sub.form_type}
                    </span>
                    <span class={`inline-flex px-2 py-1 text-xs font-medium rounded ${getStatusColor(sub.status)}`}>
                      {sub.status}
                    </span>
                  </div>
                  <h1 class="text-2xl font-bold text-gray-900">{sub.name}</h1>
                  <p class="text-gray-600">{formatDate(sub.created_at)}</p>
                </div>

                {!isAgency && (
                  <div class="flex gap-2">
                    <button
                      id="delete-btn"
                      class="px-4 py-2 bg-red-100 text-red-700 rounded-lg hover:bg-red-200 transition-colors text-sm"
                    >
                      Delete
                    </button>
                  </div>
                )}
              </div>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
              <div class="lg:col-span-2 space-y-6">
                <div class="bg-white rounded-xl shadow p-6">
                  <h2 class="text-lg font-semibold text-gray-900 mb-4">Contact Information</h2>
                  <dl class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div>
                      <dt class="text-sm font-medium text-gray-500">Name</dt>
                      <dd class="mt-1 text-gray-900">{sub.name}</dd>
                    </div>
                    <div>
                      <dt class="text-sm font-medium text-gray-500">Email</dt>
                      <dd class="mt-1">
                        <a href={`mailto:${sub.email}`} class="text-blue-600 hover:text-blue-800">
                          {sub.email}
                        </a>
                      </dd>
                    </div>
                    {sub.phone && (
                      <div>
                        <dt class="text-sm font-medium text-gray-500">Phone</dt>
                        <dd class="mt-1">
                          <a href={`tel:${sub.phone}`} class="text-blue-600 hover:text-blue-800">
                            {sub.phone}
                          </a>
                        </dd>
                      </div>
                    )}
                    {sub.location && (
                      <div>
                        <dt class="text-sm font-medium text-gray-500">Location</dt>
                        <dd class="mt-1 text-gray-900">{sub.location}</dd>
                      </div>
                    )}
                  </dl>
                </div>

                {sub.form_type === 'application' && (
                  <div class="bg-white rounded-xl shadow p-6">
                    <h2 class="text-lg font-semibold text-gray-900 mb-4">Application Details</h2>
                    <dl class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                      {sub.dob && (
                        <div>
                          <dt class="text-sm font-medium text-gray-500">Date of Birth</dt>
                          <dd class="mt-1 text-gray-900">{sub.dob}</dd>
                        </div>
                      )}
                      {sub.experience && (
                        <div>
                          <dt class="text-sm font-medium text-gray-500">Experience</dt>
                          <dd class="mt-1 text-gray-900">{sub.experience}</dd>
                        </div>
                      )}
                      {sub.cdl && (
                        <div>
                          <dt class="text-sm font-medium text-gray-500">CDL Status</dt>
                          <dd class="mt-1 text-gray-900">{sub.cdl}</dd>
                        </div>
                      )}
                    </dl>

                    {sub.resume_key && (
                      <div class="mt-6 pt-6 border-t border-gray-200">
                        <h3 class="text-sm font-medium text-gray-500 mb-3">Resume</h3>
                        <div class="flex items-center gap-4 p-4 bg-gray-50 rounded-lg mb-4">
                          <div class="flex-shrink-0">
                            <svg class="w-10 h-10 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                              />
                            </svg>
                          </div>
                          <div class="flex-1 min-w-0">
                            <p class="font-medium text-gray-900 truncate">{sub.resume_filename}</p>
                            <p class="text-sm text-gray-500">
                              {sub.resume_size && `${(sub.resume_size / 1024).toFixed(1)} KB`}
                              {sub.resume_key?.endsWith('.docx') && (
                                <span class="ml-2 text-orange-600">(Word Document)</span>
                              )}
                            </p>
                          </div>
                          <div class="flex-shrink-0">
                            <a
                              href={`/api/admin/resume/${sub.resume_key}`}
                              target="_blank"
                              class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors text-sm"
                            >
                              Download
                            </a>
                          </div>
                        </div>
                        {sub.resume_key?.endsWith('.docx') && (
                          <div class="p-3 bg-orange-50 border border-orange-200 rounded-lg text-sm text-orange-700">
                            <strong>Note:</strong> This is a Word document. Click Download to open it in Microsoft Word
                            or Google Docs.
                          </div>
                        )}
                      </div>
                    )}
                  </div>
                )}

                {sub.message && (
                  <div class="bg-white rounded-xl shadow p-6">
                    <h2 class="text-lg font-semibold text-gray-900 mb-4">Message</h2>
                    <p class="text-gray-700 whitespace-pre-wrap">{sub.message}</p>
                  </div>
                )}

                <div class="bg-white rounded-xl shadow p-6">
                  <h2 class="text-lg font-semibold text-gray-900 mb-4">Metadata</h2>
                  <dl class="grid grid-cols-1 gap-3 text-sm">
                    <div class="flex justify-between">
                      <dt class="text-gray-500">Source</dt>
                      <dd class="text-gray-900">{sub.source || '—'}</dd>
                    </div>
                    <div class="flex justify-between">
                      <dt class="text-gray-500">Page URL</dt>
                      <dd class="text-gray-900 truncate max-w-xs">{sub.page_url || '—'}</dd>
                    </div>
                    <div class="flex justify-between">
                      <dt class="text-gray-500">IP Address</dt>
                      <dd class="text-gray-900">{sub.ip_address || '—'}</dd>
                    </div>
                    <div class="flex justify-between">
                      <dt class="text-gray-500">Submission ID</dt>
                      <dd class="text-gray-900">#{sub.id}</dd>
                    </div>
                  </dl>
                </div>
              </div>

              <div class="space-y-6">
                {!isAgency && (
                  <div class="bg-white rounded-xl shadow p-6">
                    <h2 class="text-lg font-semibold text-gray-900 mb-4">Update Status</h2>
                    <form id="status-form">
                      <select
                        name="status"
                        id="status-select"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent mb-4"
                      >
                        {statusOptions.map((opt) => (
                          <option value={opt.value} selected={sub.status === opt.value}>
                            {opt.label}
                          </option>
                        ))}
                      </select>
                      <button
                        type="submit"
                        class="w-full px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
                      >
                        Update Status
                      </button>
                    </form>
                  </div>
                )}

                {!isAgency && (
                  <div class="bg-white rounded-xl shadow p-6">
                    <h2 class="text-lg font-semibold text-gray-900 mb-4">Admin Notes</h2>
                    <form id="notes-form">
                      <textarea
                        name="notes"
                        id="admin-notes"
                        rows="6"
                        placeholder="Add internal notes about this sub..."
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent mb-4 resize-none"
                      >
                        {sub.admin_notes || ''}
                      </textarea>
                      <button
                        type="submit"
                        class="w-full px-4 py-2 bg-gray-600 text-white rounded-lg hover:bg-gray-700 transition-colors"
                      >
                        Save Notes
                      </button>
                    </form>
                  </div>
                )}

                {isAgency && (
                  <div class="bg-purple-50 border border-purple-200 rounded-xl p-6">
                    <div class="flex items-center gap-3 mb-2">
                      <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                        />
                      </svg>
                      <h3 class="font-semibold text-purple-900">Agency View</h3>
                    </div>
                    <p class="text-sm text-purple-700">
                      You're viewing the agency copy of this sub. Status and notes cannot be modified from the agency
                      view.
                    </p>
                  </div>
                )}
              </div>
            </div>
          </>
        )
      }
    </main>

    <script define:vars={{ submissionId: id, isAgency }}>
      if (!isAgency) {
        // Status update
        const statusForm = document.getElementById('status-form');
        if (statusForm) {
          statusForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            const status = document.getElementById('status-select').value;

            try {
              const response = await fetch(`/api/admin/submission/${submissionId}`, {
                method: 'PATCH',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ status }),
              });

              if (response.ok) {
                window.location.reload();
              } else {
                const data = await response.json();
                alert(data.error || 'Failed to update status');
              }
            } catch (error) {
              console.error('Status update error:', error);
              alert('Failed to update status');
            }
          });
        }

        // Notes update
        const notesForm = document.getElementById('notes-form');
        if (notesForm) {
          notesForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            const notes = document.getElementById('admin-notes').value;

            try {
              const response = await fetch(`/api/admin/submission/${submissionId}`, {
                method: 'PATCH',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ admin_notes: notes }),
              });

              if (response.ok) {
                alert('Notes saved successfully');
              } else {
                const data = await response.json();
                alert(data.error || 'Failed to save notes');
              }
            } catch (error) {
              console.error('Notes save error:', error);
              alert('Failed to save notes');
            }
          });
        }

        // Delete submission
        const deleteBtn = document.getElementById('delete-btn');
        if (deleteBtn) {
          deleteBtn.addEventListener('click', async () => {
            if (!confirm('Are you sure you want to delete this submission? This action cannot be undone.')) {
              return;
            }

            try {
              const response = await fetch(`/api/admin/submission/${submissionId}`, {
                method: 'DELETE',
              });

              if (response.ok) {
                window.location.href = '/admin/submissions';
              } else {
                const data = await response.json();
                alert(data.error || 'Failed to delete submission');
              }
            } catch (error) {
              console.error('Delete error:', error);
              alert('Failed to delete submission');
            }
          });
        }
      }
    </script>
  </body>
</html>
