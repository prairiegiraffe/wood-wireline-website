---
// Admin Dashboard
// Server-rendered with auth

import '~/assets/styles/tailwind.css';
import type { Submission } from '~/lib/types';

export const prerender = false;

const env = Astro.locals.runtime?.env;
const user = Astro.locals.user;
const DB = env?.DB;

// Get stats
let stats = { total: 0, new_count: 0, contacts: 0, applications: 0 };
let recentSubmissions: Submission[] = [];

if (DB && user) {
  try {
    // Build query based on user role
    const isAgency = user.role === 'agency';
    const tenantFilter = isAgency
      ? 'is_agency_copy = 1'
      : `is_agency_copy = 0 AND tenant_id = '${user.tenant_id || env.TENANT_ID || 'default'}'`;

    // Get stats for last 30 days
    const statsResult = await DB.prepare(
      `
      SELECT
        COUNT(*) as total,
        SUM(CASE WHEN status = 'new' THEN 1 ELSE 0 END) as new_count,
        SUM(CASE WHEN form_type = 'contact' THEN 1 ELSE 0 END) as contacts,
        SUM(CASE WHEN form_type = 'application' THEN 1 ELSE 0 END) as applications
      FROM submissions
      WHERE ${tenantFilter}
        AND deleted_at IS NULL
        AND created_at > datetime('now', '-30 days')
    `
    ).first();

    if (statsResult) {
      stats = statsResult as typeof stats;
    }

    // Get recent submissions
    const recentResult = await DB.prepare(
      `
      SELECT id, tenant_id, form_type, name, email, status, location, created_at
      FROM submissions
      WHERE ${tenantFilter} AND deleted_at IS NULL
      ORDER BY created_at DESC
      LIMIT 10
    `
    ).all();

    recentSubmissions = (recentResult.results || []) as unknown as Submission[];
  } catch (error) {
    console.error('Dashboard error:', error);
  }
}

// Format date helper
function formatDate(dateStr: string): string {
  const date = new Date(dateStr);
  return date.toLocaleDateString('en-US', {
    month: 'short',
    day: 'numeric',
    year: 'numeric',
    hour: 'numeric',
    minute: '2-digit',
  });
}

// Status badge color
function getStatusColor(status: string): string {
  const colors: Record<string, string> = {
    new: 'bg-yellow-100 text-yellow-800',
    reviewed: 'bg-blue-100 text-blue-800',
    contacted: 'bg-purple-100 text-purple-800',
    hired: 'bg-green-100 text-green-800',
    archived: 'bg-gray-100 text-gray-800',
  };
  return colors[status] || colors.new;
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard - Wood Wireline</title>
    <meta name="robots" content="noindex, nofollow" />
  </head>
  <body class="bg-gray-100 min-h-screen">
    <!-- Navigation -->
    <nav class="bg-gray-900 text-white shadow-lg">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16 items-center">
          <div class="flex items-center gap-8">
            <a href="/admin" class="font-bold text-xl">Admin Dashboard</a>
            <div class="hidden md:flex gap-6">
              <a href="/admin" class="text-white hover:text-gray-300">Dashboard</a>
              <a href="/admin/submissions" class="text-gray-300 hover:text-white">All Submissions</a>
              {
                user?.role === 'agency' && (
                  <a href="/admin/users" class="text-gray-300 hover:text-white">
                    Users
                  </a>
                )
              }
            </div>
          </div>
          <div class="flex items-center gap-4">
            <a href="/admin/settings" class="text-gray-300 hover:text-white text-sm">Settings</a>
            <span class="text-gray-300 text-sm">
              {user?.name}
              {user?.role === 'agency' && <span class="ml-1 text-xs bg-purple-600 px-2 py-0.5 rounded">Agency</span>}
            </span>
            <a
              href="/api/admin/logout"
              class="text-gray-300 hover:text-white text-sm bg-gray-800 px-3 py-1.5 rounded hover:bg-gray-700"
            >
              Logout
            </a>
          </div>
        </div>
      </div>
    </nav>

    <main class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Welcome -->
      <div class="mb-8">
        <h1 class="text-2xl font-bold text-gray-900">Welcome back, {user?.name?.split(' ')[0]}</h1>
        <p class="text-gray-600">Here's what's happening with your submissions.</p>
      </div>

      <!-- Stats Cards -->
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <div class="bg-white rounded-xl shadow p-6">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-gray-500 text-sm font-medium">New (30 days)</p>
              <p class="text-3xl font-bold text-yellow-600 mt-1">{stats.new_count || 0}</p>
            </div>
            <div class="bg-yellow-100 p-3 rounded-lg">
              <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"
                ></path>
              </svg>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-xl shadow p-6">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-gray-500 text-sm font-medium">Total (30 days)</p>
              <p class="text-3xl font-bold text-gray-900 mt-1">{stats.total || 0}</p>
            </div>
            <div class="bg-gray-100 p-3 rounded-lg">
              <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                ></path>
              </svg>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-xl shadow p-6">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-gray-500 text-sm font-medium">Contact Forms</p>
              <p class="text-3xl font-bold text-green-600 mt-1">{stats.contacts || 0}</p>
            </div>
            <div class="bg-green-100 p-3 rounded-lg">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                ></path>
              </svg>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-xl shadow p-6">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-gray-500 text-sm font-medium">Applications</p>
              <p class="text-3xl font-bold text-blue-600 mt-1">{stats.applications || 0}</p>
            </div>
            <div class="bg-blue-100 p-3 rounded-lg">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
          </div>
        </div>
      </div>

      <!-- Recent Submissions -->
      <div class="bg-white rounded-xl shadow">
        <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
          <h2 class="text-lg font-semibold text-gray-900">Recent Submissions</h2>
          <a href="/admin/submissions" class="text-sm text-blue-600 hover:text-blue-800"> View all â†’ </a>
        </div>

        {
          recentSubmissions.length === 0 ? (
            <div class="px-6 py-12 text-center text-gray-500">
              <svg class="w-12 h-12 mx-auto mb-4 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"
                />
              </svg>
              <p>No submissions yet</p>
            </div>
          ) : (
            <div class="overflow-x-auto">
              <table class="w-full">
                <thead class="bg-gray-50">
                  <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Email
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Status
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider" />
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                  {recentSubmissions.map((sub) => (
                    <tr class="hover:bg-gray-50">
                      <td class="px-6 py-4 whitespace-nowrap">
                        <span
                          class={`inline-flex px-2 py-1 text-xs font-medium rounded ${
                            sub.form_type === 'application'
                              ? 'bg-blue-100 text-blue-800'
                              : 'bg-green-100 text-green-800'
                          }`}
                        >
                          {sub.form_type}
                        </span>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap font-medium text-gray-900">{sub.name}</td>
                      <td class="px-6 py-4 whitespace-nowrap text-gray-600">{sub.email}</td>
                      <td class="px-6 py-4 whitespace-nowrap">
                        <span class={`inline-flex px-2 py-1 text-xs font-medium rounded ${getStatusColor(sub.status)}`}>
                          {sub.status}
                        </span>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{formatDate(sub.created_at)}</td>
                      <td class="px-6 py-4 whitespace-nowrap text-right">
                        <a
                          href={`/admin/submissions/${sub.id}`}
                          class="text-blue-600 hover:text-blue-800 text-sm font-medium"
                        >
                          View
                        </a>
                      </td>
                    </tr>
                  ))}
                </tbody>
              </table>
            </div>
          )
        }
      </div>
    </main>
  </body>
</html>
