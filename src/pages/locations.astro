---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Stats from '~/components/widgets/Stats.astro';
import Image from '~/components/common/Image.astro';
import TablerIcon from '~/components/ui/TablerIcon.astro';
import SimpleTerrainMap from '~/components/ui/3d-map/SimpleTerrainMap.tsx';

const metadata = {
  title: 'Service Locations',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section ******************* -->

  <Hero
    tagline="Service Locations"
    actions={[
      { variant: 'primary', text: 'Contact Us', href: '/contact', icon: 'tabler:phone' },
      { variant: 'secondary', text: 'View Services', href: '/services' },
    ]}
  >
    <Fragment slot="bg">
      <Image
        src="~/assets/images/All Images/Oilfield Operations With Crane And Truck.webp"
        alt="Wood Wireline Service Locations"
        class="absolute inset-0 w-full h-full object-cover min-w-full"
        widths={[1920, 2560]}
        sizes="100vw"
        style="min-width: 100%; width: 100%; height: 100%; object-fit: cover;"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-black/50 via-black/35 to-black/50"></div>
    </Fragment>
    <Fragment slot="title">
      <span class="text-white text-5xl md:text-6xl font-bold">Our Locations</span>
    </Fragment>
    <Fragment slot="subtitle">
      <p class="text-xl md:text-2xl leading-relaxed text-white">
        Four strategic locations serving five major basins
      </p>
    </Fragment>
  </Hero>

  <!-- Stats Section ******************* -->

  <Stats
    title="Our Coverage"
    stats={[
      { title: 'Service Locations', amount: '4' },
      { title: 'Service Basins', amount: '5' },
      { title: 'States', amount: '2' },
      { title: '24/7 Availability', amount: 'Yes' },
    ]}
  />

  <!-- Interactive 3D Map ******************* -->

  <section class="py-16 md:py-24 bg-gray-50 dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-12">
        <p class="text-base font-semibold text-secondary dark:text-blue-200 uppercase tracking-wide mb-2">
          Interactive Map
        </p>
        <h2 class="text-4xl md:text-5xl font-bold tracking-tight dark:text-white mb-6">
          Explore Our Service Locations
        </h2>
        <p class="text-xl text-muted dark:text-slate-300 max-w-3xl mx-auto">
          Click on location markers to explore our four strategic operations centers across Wyoming and North Dakota.
        </p>
      </div>
      <SimpleTerrainMap client:load />
    </div>
  </section>

  <!-- Main Locations Grid ******************* -->

  <section class="py-16 md:py-24 bg-white dark:bg-gray-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-16">
        <p class="text-base font-semibold text-secondary dark:text-blue-200 uppercase tracking-wide mb-2">
          Our Locations
        </p>
        <h2 class="text-4xl md:text-5xl font-bold tracking-tight dark:text-white mb-6">
          Where We Operate
        </h2>
        <p class="text-xl text-muted dark:text-slate-300 max-w-3xl mx-auto">
          Four strategic locations ready to serve operators across the region. Our crews are ready to deliver results from the moment we cross the cattle guard.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-16">
        <!-- Gillette, WY ******************* -->
        <div id="gillette" class="bg-gray-50 dark:bg-gray-900 rounded-xl overflow-hidden shadow-xl hover:shadow-2xl transition-shadow">
          <div class="relative h-64 overflow-hidden">
            <Image
              src="~/assets/images/All Images/Wood Wireline Truck-BdikWvmwck.webp"
              alt="Gillette, WY Operations"
              class="w-full h-full object-cover"
              widths={[600, 800]}
              sizes="(max-width: 768px) 100vw, 50vw"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
            <div class="absolute bottom-4 left-4 right-4 text-white">
              <h3 class="text-3xl font-bold mb-2">Gillette, Wyoming</h3>
              <p class="text-lg">Primary Operations Base</p>
            </div>
          </div>
          <div class="p-6">
            <div class="space-y-4">
              <div class="flex items-start">
                <TablerIcon name="tabler:map-pin" className="w-6 h-6 text-primary mr-3 mt-1 flex-shrink-0" />
                <div>
                  <p class="font-semibold dark:text-white">Address</p>
                  <p class="text-muted dark:text-slate-300">3106 East 2nd Street<br>Gillette, WY</p>
                </div>
              </div>
              <div class="flex items-start">
                <TablerIcon name="tabler:map" className="w-6 h-6 text-primary mr-3 mt-1 flex-shrink-0" />
                <div>
                  <p class="font-semibold dark:text-white">Primary Service Basin</p>
                  <p class="text-muted dark:text-slate-300">Powder River Basin</p>
                </div>
              </div>
              <div class="flex items-start">
                <TablerIcon name="tabler:phone" className="w-6 h-6 text-primary mr-3 mt-1 flex-shrink-0" />
                <div>
                  <p class="font-semibold dark:text-white">Phone</p>
                  <p class="text-muted dark:text-slate-300">
                    <a href="tel:307-682-0143" class="text-primary hover:underline">307-682-0143</a>
                  </p>
                </div>
              </div>
              <div class="flex items-start">
                <TablerIcon name="tabler:clock" className="w-6 h-6 text-primary mr-3 mt-1 flex-shrink-0" />
                <div>
                  <p class="font-semibold dark:text-white">Availability</p>
                  <p class="text-muted dark:text-slate-300">24/7 Emergency Service</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Casper, WY ******************* -->
        <div id="casper" class="bg-gray-50 dark:bg-gray-900 rounded-xl overflow-hidden shadow-xl hover:shadow-2xl transition-shadow">
          <div class="relative h-64 overflow-hidden">
            <Image
              src="~/assets/images/All Images/Oil Rig Workers Onsite.webp"
              alt="Casper, WY Operations"
              class="w-full h-full object-cover"
