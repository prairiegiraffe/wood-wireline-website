---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Image from '~/components/common/Image.astro';
import TablerIcon from '~/components/ui/TablerIcon.astro';
import SimpleTerrainMap from '~/components/ui/3d-map/SimpleTerrainMap.tsx';

const metadata = {
  title: 'Service Locations',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section ******************* -->

  <Hero
    tagline="Service Locations"
    actions={[
      { variant: 'primary', text: 'Contact Us', href: '/contact', icon: 'tabler:phone' },
      { variant: 'secondary', text: 'View Services', href: '/services' },
    ]}
  >
    <Fragment slot="title">
      <span class="text-accent dark:text-white">OUR LOCATIONS</span><br />
      <span class="text-4xl md:text-5xl font-bold mt-4 block">Four strategic locations serving five basins</span>
    </Fragment>

    <Fragment slot="bg">
      <Image
        src="~/assets/images/All Images/Industrial Equipment Against Blue Sky.webp"
        alt="Wood Wireline Service Locations"
        class="absolute inset-0 w-full h-full object-cover opacity-50 dark:opacity-30"
        widths={[1920, 2560]}
        sizes="100vw"
        style="min-width: 100%; width: 100%; height: 100%; object-fit: cover;"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-black/42 via-black/30 to-black/42"></div>
    </Fragment>
  </Hero>

  <!-- Coverage Stats ******************* -->

  <section class="py-16 md:py-24 bg-white dark:bg-gray-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-12">
        <h2 class="text-4xl md:text-5xl font-bold tracking-tight dark:text-white mb-4">Our Coverage</h2>
        <p class="text-xl text-muted dark:text-slate-300 max-w-3xl mx-auto">
          Strategically positioned across the region to deliver results when you need them.
        </p>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 md:gap-8">
        <div class="bg-gray-50 dark:bg-gray-900 rounded-xl p-6 md:p-8 text-center border-t-4 border-primary">
          <div class="text-4xl md:text-5xl font-bold text-primary mb-2">4</div>
          <div class="text-base md:text-lg font-semibold dark:text-white">Service Locations</div>
        </div>
        <div class="bg-gray-50 dark:bg-gray-900 rounded-xl p-6 md:p-8 text-center border-t-4 border-secondary">
          <div class="text-4xl md:text-5xl font-bold text-secondary mb-2">5</div>
          <div class="text-base md:text-lg font-semibold dark:text-white">Service Basins</div>
        </div>
        <div class="bg-gray-50 dark:bg-gray-900 rounded-xl p-6 md:p-8 text-center border-t-4 border-primary">
          <div class="text-4xl md:text-5xl font-bold text-primary mb-2">2</div>
          <div class="text-base md:text-lg font-semibold dark:text-white">States</div>
        </div>
        <div class="bg-gray-50 dark:bg-gray-900 rounded-xl p-6 md:p-8 text-center border-t-4 border-secondary">
          <div class="text-4xl md:text-5xl font-bold text-secondary mb-2">24/7</div>
          <div class="text-base md:text-lg font-semibold dark:text-white">Availability</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Interactive 3D Map ******************* -->

  <section class="py-16 md:py-24 bg-gray-50 dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-12">
        <p class="text-base font-semibold text-secondary dark:text-blue-200 uppercase tracking-wide mb-2">
          Interactive Map
        </p>
        <h2 class="text-4xl md:text-5xl font-bold tracking-tight dark:text-white mb-6">
          Explore Our Service Locations
        </h2>
        <p class="text-xl text-muted dark:text-slate-300 max-w-3xl mx-auto">
          Click on location markers to explore our four strategic operations centers across Wyoming and North Dakota.
        </p>
      </div>
      <SimpleTerrainMap client:load />
    </div>
  </section>

  <!-- Where We Operate Overview ******************* -->

  <section class="py-16 md:py-24 bg-white dark:bg-gray-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="grid md:grid-cols-2 gap-12 items-center mb-20 md:mb-28">
        <!-- Content Column -->
        <div class="order-2 md:order-1">
          <p class="text-base font-semibold text-secondary dark:text-blue-200 uppercase tracking-wide mb-2">
            Our Locations
          </p>
          <h2 class="text-4xl md:text-5xl font-bold tracking-tight dark:text-white mb-6">Where We Operate</h2>
          <p class="text-lg md:text-xl text-muted dark:text-slate-300 mb-8 leading-relaxed">
            Four strategic locations ready to serve operators across the region. Our crews are positioned to deliver
            results from the moment we cross the cattle guard.
          </p>
          <div class="space-y-6">
            <div class="bg-gray-50 dark:bg-gray-900 rounded-xl p-6 border-l-4 border-primary">
              <h3 class="text-xl font-bold dark:text-white mb-4 flex items-center">
                <div class="w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center mr-3">
                  <TablerIcon name="tabler:map-pin" className="w-5 h-5 text-primary" />
                </div>
                Wyoming Operations
              </h3>
              <div class="space-y-3 pl-13">
                <div class="flex items-start">
                  <TablerIcon name="tabler:point" className="w-5 h-5 text-primary mr-3 mt-1 flex-shrink-0" />
                  <span class="text-base dark:text-slate-300"><strong>Gillette</strong> - Powder River Basin HQ</span>
                </div>
                <div class="flex items-start">
                  <TablerIcon name="tabler:point" className="w-5 h-5 text-primary mr-3 mt-1 flex-shrink-0" />
                  <span class="text-base dark:text-slate-300"
                    ><strong>Casper</strong> - DJ Basin & Big Horn Coverage</span
                  >
                </div>
              </div>
            </div>
            <div class="bg-gray-50 dark:bg-gray-900 rounded-xl p-6 border-l-4 border-secondary">
              <h3 class="text-xl font-bold dark:text-white mb-4 flex items-center">
