                  <TablerIcon name="tabler:map-pin" className="w-5 h-5 text-primary" />
                </div>
                <div>
                  <p class="font-semibold dark:text-white mb-1">Location</p>
                  <p class="text-muted dark:text-slate-300">Dickinson, ND</p>
                </div>
              </div>
              <div class="flex items-start">
