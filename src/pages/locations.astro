                <div class="flex items-start">
                  <TablerIcon name="tabler:point" className="w-5 h-5 text-secondary mr-3 mt-1 flex-shrink-0" />
                  <span class="text-base dark:text-slate-300"
                    ><strong>Dickinson</strong> - Williston Basin Services</span
                  >
                </div>
                <div class="flex items-start">
                  <TablerIcon name="tabler:point" className="w-5 h-5 text-secondary mr-3 mt-1 flex-shrink-0" />
                  <span class="text-base dark:text-slate-300"><strong>Williston</strong> - Bakken Operations</span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Images Column - Asymmetric Grid -->
        <div class="relative order-1 md:order-2">
          <!-- Top left image -->
          <div class="relative mb-4 ml-0 md:ml-12">
            <Image
              src="~/assets/images/All Images/Wood Wireline Truck-BdikWvmwck.webp"
              alt="Wyoming Operations"
              class="w-full h-64 object-cover rounded-lg shadow-xl"
              widths={[600, 800]}
              sizes="(max-width: 768px) 100vw, 45vw"
            />
            <div class="absolute -top-4 -right-4 bg-primary text-white px-4 py-2 rounded-lg font-bold shadow-lg">
              WY
            </div>
          </div>

          <!-- Bottom grid - offset to the left -->
          <div class="grid grid-cols-2 gap-4">
            <div class="relative">
              <Image
                src="~/assets/images/All Images/Oil Rig Workers Onsite.webp"
                alt="North Dakota Field Operations"
                class="w-full h-48 object-cover rounded-lg shadow-lg"
                widths={[400, 600]}
                sizes="(max-width: 768px) 50vw, 22vw"
              />
              <div
                class="absolute -bottom-3 -left-3 bg-secondary text-white px-3 py-1 rounded-lg font-bold text-sm shadow-lg"
              >
                ND
              </div>
            </div>
            <div class="relative mt-8">
              <Image
                src="~/assets/images/All Images/Wood Wireline Truck-VIF53Zk16v.webp"
