---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import TestimonialsWidget from '~/components/widgets/Testimonials.astro';
import Brands from '~/components/widgets/Brands.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Image from '~/components/common/Image.astro';

const metadata = {
  title: 'Testimonials — Wood Wireline',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero tagline="Testimonials">
    <Fragment slot="bg">
      <Image
        src="~/assets/images/All Images/Oilfield Workers Operating Machinery.webp"
        alt="Wood Wireline Operations"
        class="absolute inset-0 w-full h-full object-cover min-w-full"
        widths={[1920, 2560]}
        sizes="100vw"
        style="min-width: 100%; width: 100%; height: 100%; object-fit: cover;"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-black/50 via-black/35 to-black/50"></div>
    </Fragment>
    <Fragment slot="title">
      <span class="text-white text-5xl md:text-6xl font-bold">Client Testimonials</span>
    </Fragment>
    <Fragment slot="subtitle">
      <p class="text-xl md:text-2xl leading-relaxed text-white">Trusted by industry leaders</p>
    </Fragment>
  </Hero>

  <!-- Testimonials Section -->
  <TestimonialsWidget
    title="Client Testimonials"
    subtitle="Don't just take our word for it. Here's what operators and industry professionals have to say about working with Wood Wireline."
    tagline="What Our Clients Say"
    testimonials={[
      {
        testimonial: `Wood Wireline has been our go-to service provider for years. Their crews are professional, efficient, and always show up ready to work. They've never let us down, and their attention to detail is unmatched. When we need wireline services, we call Wood Wireline.`,
        name: 'Operations Manager',
        job: 'Major Operator, Williston Basin',
      },
      {
        testimonial: `What sets Wood Wireline apart is their attention to detail and commitment to safety. They get the job done right the first time, every time. Their crews are among the most efficient we've worked with. No excuses, no downtime—just results.`,
        name: 'Company Man',
        job: 'Independent Operator, Powder River Basin',
      },
      {
        testimonial: `We've worked with Wood Wireline across multiple basins, and their consistency and reliability are unmatched. They understand what it takes to keep operations moving, and they deliver on their promises. Their crews show up ready from the moment they cross the cattle guard.`,
        name: 'Field Supervisor',
        job: 'Regional Operator',
      },
      {
        testimonial: `Wood Wireline's experience shows in every job. They've seen it all and know how to handle it. That experience means fewer delays, smarter decisions, and better results for our operations. They're a trusted partner we can count on.`,
        name: 'Drilling Manager',
        job: 'Energy Company, Bakken Basin',
      },
      {
        testimonial: `Safety is paramount in our operations, and Wood Wireline shares that commitment. Every project is carried out with precision, efficiency, and the highest safety standards. That's how they've built their reputation—by doing the job right, every single time.`,
        name: 'Operations Director',
        job: 'Major Operator, DJ Basin',
      },
      {
        testimonial: `Whether it's the middle of the day or the middle of the night, Wood Wireline shows up ready to work. Quick rigs, tight turnarounds, and honest communication are what we've come to expect. They don't just meet expectations—they exceed them.`,
        name: 'Well Site Supervisor',
        job: 'Independent Operator, Powder River Basin',
      },
    ]}
  />

  <!-- Trusted By Brands Section -->
  <Brands
    tagline="Trusted By"
    title="Industry Leaders Across the Basin"
    subtitle="We're proud to serve operators and companies throughout the Powder River Basin, Williston Basin, Bakken Basin, DJ Basin, Big Horn Basin, and beyond. Our commitment to excellence has earned the trust of industry leaders."
    icons={[
      'tabler:building-factory',
      'tabler:building-warehouse',
      'tabler:building',
      'tabler:building-skyscraper',
      'tabler:building-arch',
      'tabler:building-store',
    ]}
  >
    <Fragment slot="bg">
      <div
        class="absolute inset-0 bg-gradient-to-b from-white via-gray-50 to-white dark:from-transparent dark:via-transparent dark:to-transparent"
      >
      </div>
    </Fragment>
  </Brands>

  <!-- Note: Replace icons above with actual company logos by updating the images prop:
    images={[
      { src: '~/assets/images/logos/company1.png', alt: 'Company Name' },
      { src: '~/assets/images/logos/company2.png', alt: 'Company Name' },
      // Add more company logos here
    ]}
  -->

  <!-- Additional Testimonials Section -->
  <section class="py-16 md:py-24 bg-gray-50 dark:bg-gray-900">
