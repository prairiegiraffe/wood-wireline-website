    actions={[
      {
        variant: 'primary',
        text: 'Get a Quote',
        href: '/contact',
        icon: 'tabler:phone',
      },
      {
        text: 'View Our Services',
        href: '/services',
      },
    ]}
  >
    <Fragment slot="title"> Ready to Experience the Wood Wireline Difference? </Fragment>
    <Fragment slot="subtitle">
