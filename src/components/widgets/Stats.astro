---
import type { Stats as Props } from '~/types';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Headline from '~/components/ui/Headline.astro';
import { Icon } from 'astro-icon/components';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline,
  stats = [],

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-6xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline title={title} subtitle={subtitle} tagline={tagline} />
  <div class="flex flex-wrap justify-center -m-4 text-center">
    {
      stats &&
        stats.map(({ amount, title, subtitle, icon }) => (
          <div class="p-4 md:w-1/4 sm:w-1/2 w-full min-w-[220px] text-center md:border-r md:last:border-none dark:md:border-slate-500 intersect-once motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade intersect-quarter">
            {icon && (
              <div class="flex items-center justify-center mx-auto mb-4 text-primary">
                <Icon name={icon} class="w-10 h-10" />
              </div>
            )}
            {amount && (
              <div
                class="font-heading text-primary text-[2.6rem] font-bold dark:text-white lg:text-5xl xl:text-6xl count-up"
                data-target={amount}
              >
                {amount}
              </div>
            )}
            {title && (
              <div class="text-sm font-medium uppercase tracking-widest text-gray-800 dark:text-slate-400 lg:text-base">
                {title}
              </div>
            )}
            {subtitle && <div class="text-xs text-muted dark:text-slate-500 mt-1">{subtitle}</div>}
          </div>
        ))
    }
  </div>
</WidgetWrapper>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const countUpElements = document.querySelectorAll('.count-up');

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            const element = entry.target;
            const target = element.getAttribute('data-target');

            // Parse the target value
            const hasPlus = target.includes('+');
            const hasComma = target.includes(',');
            const numericValue = parseInt(target.replace(/[^0-9]/g, ''));

            // Animate the count
            let current = 0;
            const duration = 2000; // 2 seconds
            const increment = numericValue / (duration / 16); // 60fps

            const updateCount = () => {
              current += increment;
              if (current < numericValue) {
                let displayValue = Math.floor(current);
                if (hasComma && displayValue >= 1000) {
                  displayValue = displayValue.toLocaleString();
                }
                element.textContent = displayValue + (hasPlus ? '+' : '');
                requestAnimationFrame(updateCount);
              } else {
                element.textContent = target; // Set final value
              }
            };

            updateCount();
            observer.unobserve(element);
          }
        });
      },
      { threshold: 0.5 }
    );

    countUpElements.forEach((el) => observer.observe(el));
  });
</script>
