---
import Button from '~/components/ui/Button.astro';

import type { Hero as Props } from '~/types';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline,

  content = await Astro.slots.render('content'),
  actions = await Astro.slots.render('actions'),

  id,
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<section
  class="relative md:-mt-[76px] not-prose min-h-[60vh] md:min-h-[70vh] flex items-center overflow-x-hidden w-full"
  style="background-color: transparent; background: transparent;"
  {...id ? { id } : {}}
>
  <div
    class="absolute inset-0 pointer-events-none overflow-hidden"
    aria-hidden="true"
    style="background-color: transparent; background: transparent; width: 100vw; left: 50%; right: 50%; margin-left: -50vw; margin-right: -50vw;"
  >
    <slot name="bg">
      {bg ? <Fragment set:html={bg} /> : null}
    </slot>
  </div>
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 w-full">
    <div class="pt-0 md:pt-[76px] pointer-events-none"></div>
    <div class="py-12 md:py-20">
      <div class="text-center pb-10 md:pb-16 max-w-5xl mx-auto">
        {
          tagline && (
            <p
              class="text-base text-white dark:text-blue-200 font-bold tracking-wide uppercase mb-4"
              set:html={tagline}
              aria-label={typeof tagline === 'string' ? tagline : undefined}
            />
          )
        }
        {
          title && (
            <h1
              class="text-5xl md:text-6xl font-bold leading-tighter tracking-tighter mb-6 font-heading text-white dark:text-white"
              set:html={title}
              aria-label={typeof title === 'string' ? title : undefined}
            />
          )
        }
        <div class="max-w-3xl mx-auto">
          {subtitle && <p class="text-xl text-white mb-8 dark:text-white" set:html={subtitle} />}
          {
            actions && (
              <div class="max-w-xs sm:max-w-md m-auto flex flex-nowrap flex-col sm:flex-row sm:justify-center gap-4">
                {Array.isArray(actions) ? (
                  actions.map((action) => (
                    <div class="flex w-full sm:w-auto">
                      <Button {...(action || {})} class="w-full sm:mb-0" />
                    </div>
                  ))
                ) : (
                  <Fragment set:html={actions} />
                )}
              </div>
            )
          }
        </div>
        {content && <Fragment set:html={content} />}
      </div>
    </div>
  </div>
</section>
